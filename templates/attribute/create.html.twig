{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}


{% block body %}
    <main class="main-content">
        <div class="fullwidth-block">
		</div> <!-- .fullwidth-block -->

        <div class="fullwidth-block">
            <div class="container">
                <div class="row">
                        <div class="card-body">
                            <h1 class="tomato-color">Attribute Creation</h1>
                            {{ form_start(attributeForm) }}
                                <div>
                                    {{ form_row
                                        (attributeForm.name,
                                            { label: "Name *",
                                            'attr': {'placeholder': "Enter the attribute name"}
                                            }
                                        )
                                    }}
                                </div>
                                <div>
                                    {{ form_row
                                        (attributeForm.abbreviation,
                                            { label: "Abbreviation",
                                            'attr': {'placeholder': "Enter the attribute abbreviation"}
                                            }
                                        )
                                    }}
                                </div><div>
                                    {{ form_row
                                        (attributeForm.description,
                                            { label: "Description",
                                            'attr': {'placeholder': "Enter the attribute description"}
                                            }
                                        )
                                    }}
                                </div>
                                <div>
                                    {{ form_row
                                        (attributeForm.publicationReference,
                                            { label: "Publication reference",
                                            'attr': {'placeholder': "Enter the attribute publication reference"}
                                            }
                                        )
                                    }}
                                </div>
                                <div>
                                    {{ form_row
                                        (attributeForm.category,
                                            { label: "Category",
                                            'attr': {'placeholder': "Select the attribute category"}
                                            }
                                        )
                                    }}
                                </div>
                                <button type="submit" class="btn">Create</button>
                                <button type="reset" class="btn">Cancel</button>
                            {{ form_end(attributeForm) }}
                        </div>
                    </div>
                    </div>
                </div> <!-- .row -->
            </div> <!-- .container -->
        </div> <!-- .fullwidth-block -->
    </main> <!-- .main-content -->
{% endblock %}
