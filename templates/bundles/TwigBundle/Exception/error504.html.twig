{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'base.html.twig' %}


{% block body %}
    <div id="wrapper-content" class="mx-auto">
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <h3>
                <p>
                    <b> Your request needs much more time to be completed.
                        The system is processing it in background, please go check the data in the system later. <a href="{{ path('app_home') }}">Click here to return to the homepage</a></b>.
                </p>
            </h3>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
{% endblock %}