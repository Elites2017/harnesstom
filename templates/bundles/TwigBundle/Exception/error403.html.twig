{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper-content" class="mx-auto">
        <h1>403 Forbidden</h1>
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <h3>
                <p>
                    <b>You don't have access to the requested ressources, make sure you're logged in and you have the correct privileges to acess the requested ressources <a href="{{ path('app_home') }}">return to the homepage</a></b>.
                </p>
            </h3>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
{% endblock %}