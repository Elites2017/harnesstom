{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper-content" class="mx-auto">
        <h1>Network Authentification Required</h1>
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <h3>
                <p>
                    <b>Something went wrong, please report your last action to the administrator(s) [ with the exact same files if any ] or <a href="{{ path('app_home') }}">return to the homepage</a></b>.
                </p>
            </h3>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
{% endblock %}