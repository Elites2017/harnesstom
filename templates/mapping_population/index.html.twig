{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block stylesheets %}
    <!-- Bootstrap core CSS -->
    <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/bootstrap-toggle.min.css') }}" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="{{ asset('assets/css/jumbotron.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/custom_dropdown.css') }}" rel="stylesheet">
    <!-- DataTables CSS -->
    <link href="{{ asset('assets/datatables/css/dataTables.bootstrap4.min.css') }}" rel="stylesheet">

    <!-- DataTables Responsive CSS -->
    <link href="{{ asset('assets/datatables/css/dataTables.responsive.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12 order-md-1">
				{% if mappingPopulations | length > 0 %}
					<h2 class="mb-3 text-center tomato-color font-weight-bold">Mapping Population List</h2>
					<div class="table-responsive">
						<table id="datatable" class="table table-hover text-nowrap" width="100%">
							<thead class="table-dark">
								<tr>
									<th scope="col">Name</th>
									<th scope="col">Cross Name</th>
                                    <th scope="col">Cross Study</th>
                                    <th scope="col">Cross Institute</th>
                                    <th scope="col">Cross Paret 1</th>
                                    <th scope="col">Cross Parent 2</th>
                                    <th scope="col">Cross Breeding Method</th>
                                    <th scope="col">Cross Pedigree</th>
                                    <th scope="col">Cross Year</th>
									<th scope="col">Pedigree Generation</th>
									<th scope="col">Pedigree Entry ID</th>
                                    <th scope="col">Ancestor Pedigree Entry ID</th>
                                    <th scope="col">Generation</th>
                                    <th scope="col">Cross</th>
									<th scope="col">Action</th>
								</tr>
							</thead>
							<tbody>
								{% for mappingPopulation in mappingPopulations %}
									<tr>
										<td>
											{{ mappingPopulation.name }}
										</td>
										<td>
											{% if mappingPopulation.mappingPopulationCross %}
												<a href="{{ path('cross_details', {id: mappingPopulation.mappingPopulationCross.id}) }}">{{ mappingPopulation.mappingPopulationCross }}</a>
											{% endif %}
										</td>
                                        <td>
											{% if mappingPopulation.mappingPopulationCross.study %}
												<a href="{{ path('study_details', {id: mappingPopulation.mappingPopulationCross.study.id}) }}">{{ mappingPopulation.mappingPopulationCross.study }}</a>
											{% endif %}
										</td>
                                        <td>
											{% if mappingPopulation.mappingPopulationCross.institute %}
												<a href="{{ path('institute_details', {id: mappingPopulation.mappingPopulationCross.institute.id}) }}">{{ mappingPopulation.mappingPopulationCross.institute }}</a>
											{% endif %}
										</td>
                                        <td>
											{% if mappingPopulation.mappingPopulationCross.parent1 %}
												<a href="{{ path('germplasm_details', {id: mappingPopulation.mappingPopulationCross.parent1.id}) }}">{{ mappingPopulation.mappingPopulationCross.parent1 }}</a>
											{% endif %}
										</td>
                                        <td>
											{% if mappingPopulation.mappingPopulationCross.parent2 %}
												<a href="{{ path('germplasm_details', {id: mappingPopulation.mappingPopulationCross.parent2.id}) }}">{{ mappingPopulation.mappingPopulationCross.parent2 }}</a>
											{% endif %}
										</td>
                                        <td>
											{% if mappingPopulation.mappingPopulationCross.breedingMethod %}
												<a href="{{ path('breeding_method_details', {id: mappingPopulation.mappingPopulationCross.breedingMethod.id}) }}">{{ mappingPopulation.mappingPopulationCross.breedingMethod }}</a>
											{% endif %}
										</td>
                                        <td>
											{% if mappingPopulation.mappingPopulationCross.pedigree %}
												<a href="{{ path('pedigree_details', {id: mappingPopulation.mappingPopulationCross.pedigree.id}) }}">{{ mappingPopulation.mappingPopulationCross.pedigree }}</a>
											{% endif %}
										</td>
                                        <td>
											{{ mappingPopulation.mappingPopulationCross.year }}</a>
										</td>
										<td>
											{% if mappingPopulation.pedigreeGeneration %}
												<a href="{{ path('pedigree_details', {id: mappingPopulation.pedigreeGeneration.id}) }}">{{ mappingPopulation.pedigreeGeneration }}</a>
											{% endif %}
										</td>
                                        <td>
											{% if mappingPopulation.pedigreeGeneration %}
												<a href="{{ path('pedigree_details', {id: mappingPopulation.pedigreeGeneration.id}) }}">{{ mappingPopulation.pedigreeGeneration.pedigreeEntryID }}</a>
											{% endif %}
										</td>
                                        <td>
											{% if mappingPopulation.pedigreeGeneration %}
												<a href="{{ path('pedigree_details', {id: mappingPopulation.pedigreeGeneration.id}) }}">{{ mappingPopulation.pedigreeGeneration.ancestorPedigreeEntryID }}</a>
											{% endif %}
										</td>
                                        <td>
											{% if mappingPopulation.pedigreeGeneration.generation %}
												<a href="{{ path('generation_details', {id: mappingPopulation.pedigreeGeneration.generation.id}) }}">{{ mappingPopulation.pedigreeGeneration.generation }}</a>
											{% endif %}
										</td>
                                        <td>
											{% if mappingPopulation.pedigreeGeneration %}
												<a href="{{ path('cross_details', {id: mappingPopulation.pedigreeGeneration.pedigreeCross.id}) }}">{{ mappingPopulation.pedigreeGeneration.pedigreeCross }}</a>
											{% endif %}
										</td>
										<td>
											<a href="{{ path('mapping_population_details', {id: mappingPopulation.id}) }}">
												<button class="btn btn-outline-primary">Details</button>
											</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				{% else %}
					<h5 class="mb-3 text-center tomato-color font-weight-bold">No mapping population has been provided in our system</h5>
				{% endif %}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
		<script>window.jQuery || document.write('<script src="{{ asset('assets/js1/vendor/jquery.slim.min.js') }}"><\/script>')</script>
		<script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>
<!-- DataTables JavaScript -->
    <script src="{{ asset('assets/datatables/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assets/datatables/js/dataTables.bootstrap4.min.js') }}"></script>
    <script src="{{ asset('assets/datatables/js/dataTables.responsive.js') }}"></script>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function() {
            $('#datatable').DataTable();
        } );
    </script>
{% endblock %}