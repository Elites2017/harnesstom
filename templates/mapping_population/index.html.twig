{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
		{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
			{% for message in messages %}
				<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
			{% endfor %}
		{% endfor %}
			<div class="col-md-12 order-md-1">
				{% if mappingPopulations | length > 0 %}
					<h6 class="m-0 font-weight-bold tomato-color">Mapping Population List</br>
						<small>Private data are not shown unless they are shared with you.</small>
					</h6>
					<div class="table-responsive">
						<table id="datatable" class="table table-hover text-nowrap" width="100%">
							<thead class="table-dark">
								<tr>
									<th scope="col">Name</th>
									<th scope="col">Cross Name</th>
									<th scope="col">Generation</th>
                                    <th scope="col">Cross Study</th>
                                    <th scope="col">Cross Institute</th>
                                    <th scope="col">Cross Parent 1</th>
                                    <th scope="col">Cross Parent 2</th>
                                    <th scope="col">Cross Breeding Method</th>
                                    <th scope="col">Cross Year</th>
									<th scope="col">Action</th>
								</tr>
							</thead>
							<tbody>
								{% for mappingPopulation in mappingPopulations %}
									<tr>
										<td>
											{{ mappingPopulation.name }}
										</td>
										<td>
											{% if mappingPopulation.mappingPopulationCross %}
												<a href="{{ path('cross_details', {id: mappingPopulation.mappingPopulationCross.id}) }}">{{ mappingPopulation.mappingPopulationCross }}</a>
											{% endif %}
										</td>
										<td>
											{% if mappingPopulation.pedigreeGeneration %}
												<a href="{{ path('pedigree_details', {id: mappingPopulation.pedigreeGeneration.id}) }}">{{ mappingPopulation.pedigreeGeneration }}</a>
											{% endif %}
										</td>
                                        <td>
											{% if mappingPopulation.mappingPopulationCross.study %}
												<a href="{{ path('study_details', {id: mappingPopulation.mappingPopulationCross.study.id}) }}">{{ mappingPopulation.mappingPopulationCross.study.abbreviation }}</a>
											{% endif %}
										</td>
                                        <td>
											{% if mappingPopulation.mappingPopulationCross.institute %}
												<a href="{{ path('institute_details', {id: mappingPopulation.mappingPopulationCross.institute.id}) }}">{{ mappingPopulation.mappingPopulationCross.institute.acronym }}</a>
											{% endif %}
										</td>
                                        <td>
											{% if mappingPopulation.mappingPopulationCross.parent1 %}
												<a href="{{ path('germplasm_details', {id: mappingPopulation.mappingPopulationCross.parent1.id}) }}">{{ mappingPopulation.mappingPopulationCross.parent1 }}</a>
											{% endif %}
										</td>
                                        <td>
											{% if mappingPopulation.mappingPopulationCross.parent2 %}
												<a href="{{ path('germplasm_details', {id: mappingPopulation.mappingPopulationCross.parent2.id}) }}">{{ mappingPopulation.mappingPopulationCross.parent2 }}</a>
											{% endif %}
										</td>
                                        <td>
											{% if mappingPopulation.mappingPopulationCross.breedingMethod %}
												<a href="{{ path('breeding_method_details', {id: mappingPopulation.mappingPopulationCross.breedingMethod.id}) }}">{{ mappingPopulation.mappingPopulationCross.breedingMethod }}</a>
											{% endif %}
										</td>
                                        <td>
											{{ mappingPopulation.mappingPopulationCross.year }}</a>
										</td>
                                        <td>
											<a href="{{ path('mapping_population_details', {id: mappingPopulation.id}) }}">
												<button class="btn btn-outline-primary">Details</button>
											</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				{% else %}
					<h5 class="mb-3 text-center tomato-color font-weight-bold">No mapping population has been provided in our system</h5>
				{% endif %}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
    {% include 'resource/list_js.html.twig' %}

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function() {
            $('#datatable').DataTable();
        } );
    </script>
{% endblock %}