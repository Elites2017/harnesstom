{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		
		<!-- .row -->
		<div class="row">
            <div class="col-xl-12 col-lg-11 mb-3">
                <div class="row">
                    <div class="col-9">
                        <h2 class="mb-3 text-center tomato-color font-weight-bold">Mapping Population Details</h2>
                    </div>

                    <div class="col-3">
                        {% if is_granted("ROLE_ADMIN") %}
							<span>Created By: 
								<a href="{{ path('person_details', {id: mappingPopulation.createdBy.id}) }}">{{ mappingPopulation.createdBy }}</a>
							</span>
							<span>On: {{ mappingPopulation.createdAt | date('d/m/Y h:m:s') }} </span>
							</br><a href="{{ path('mapping_population_delete', {id: mappingPopulation.id}) }}" class="changeStatusLink" id="{{ mappingPopulation.id }}">
								<span class="changeStatusSpan">
									<input type="checkbox" {{ mappingPopulation.isActive ? ' checked=true ' : 'unchecked = true' }} data-toggle="toggle" data-onstyle="outline-success" data-offstyle="outline-danger">
								</span>
                                </a>
                        {% endif %}
                        {% if is_granted("mapping_population_edit", mappingPopulation) %}
							<a href="{{ path('mapping_population_edit', {id: mappingPopulation.id}) }}">
								<button class="btn btn-outline-warning">Edit</button>
							</a>
                        {% endif %}
                    </div>
				</div>
			</div>
		</div>

		{# object related row #}
		<div class="row mb-3">
			<div class="col-xl-6 col-lg-5 mb-3 mt-1">
				<div class="card">
					<div class="card-header">
						<h3 class="tomato-color">Mapping Population Basic Information</h3>
					</div>

					<div class="card-body">
						<div class="col-xl-12 col-lg-11 mb-1">
							<label for="validationTooltip01">Mapping Population Name: </label>
							<span class="tomato-color font-weight-bold">{{ mappingPopulation.name}}</span>
						</div>

						<div class="col-xl-12 col-lg-11 mb-1">
							<label for="validationTooltip01">Cross Name: </label>
							<a href="{{ path('cross_details', {id: mappingPopulation.mappingPopulationCross.id}) }}">
								<span class="tomato-color font-weight-bold">{{ mappingPopulation.mappingPopulationCross.name }}</span>
							</a>
						</div>

						<div class="col-xl-12 col-lg-11 mb-1">
							<label for="validationTooltip01">Cross Institute: </label>
							{% if mappingPopulation.mappingPopulationCross %}
								<a href="{{ path('institute_details', {id: mappingPopulation.mappingPopulationCross.institute.id}) }}">
									<span class="tomato-color font-weight-bold">{{ mappingPopulation.mappingPopulationCross.institute }}</span>
								</a>
							{% endif %}
						</div>

						<div class="col-xl-12 col-lg-11 mb-1">
							<label for="validationTooltip01">Cross Study: </label>
							{% if mappingPopulation.mappingPopulationCross %}
								<a href="{{ path('study_details', {id: mappingPopulation.mappingPopulationCross.study.id}) }}">
									<span class="tomato-color font-weight-bold">{{ mappingPopulation.mappingPopulationCross.study }}</span>
								</a>
							{% endif %}
						</div>

						<div class="col-xl-12 col-lg-11 mb-1">
							<label for="validationTooltip01">Publication Reference: </label>
							{% if mappingPopulation.publicationRef %}
								{% for one in mappingPopulation.publicationRef %}
									<span class="tomato-color font-weight-bold">{{ loop.index }}) {{ one }}</span> </br>
								{% endfor %}
							{% endif %}
						</div>
					</div>

					<div class="card-footer text-muted">
					</div>
				</div>
			</div>

			<div class="col-xl-6 col-lg-5 mb-3 mt-1">
				<div class="card">
					<div class="card-header">
						<h3 class="tomato-color">Cross Parents & Generation</h3>
					</div>

					<div class="col-xl-12 col-lg-11 mb-1">
							<label for="validationTooltip01">Parent 1: </label>
							{% if mappingPopulation.mappingPopulationCross.parent1 %}
								<a href="{{ path('germplasm_details', {id: mappingPopulation.mappingPopulationCross.parent1.id}) }}">
									<span class="tomato-color font-weight-bold">{{ mappingPopulation.mappingPopulationCross.parent1 }}</span>
								</a>
							{% endif %}
						</div>

						<div class="col-xl-12 col-lg-11 mb-1">
							<label for="validationTooltip01">Parent 1 Type: </label>
							<span class="tomato-color font-weight-bold">{{ mappingPopulation.mappingPopulationCross.parent1Type}}</span>
						</div>

						<div class="col-xl-12 col-lg-11 mb-1">
							<label for="validationTooltip01">Parent 2: </label>
							{% if mappingPopulation.mappingPopulationCross.parent2 %}
								<a href="{{ path('germplasm_details', {id: mappingPopulation.mappingPopulationCross.parent2.id}) }}">
									<span class="tomato-color font-weight-bold">{{ mappingPopulation.mappingPopulationCross.parent2 }}</span>
								</a>
							{% endif %}
						</div>

						<div class="col-xl-12 col-lg-11 mb-1">
							<label for="validationTooltip01">Parent 2 Type: </label>
							<span class="tomato-color font-weight-bold">{{ mappingPopulation.mappingPopulationCross.parent2Type}}</span>
						</div>

						<div class="col-xl-12 col-lg-11 mb-1">
							<label for="validationTooltip01">Cross Year: </label>
							<span class="tomato-color font-weight-bold">{{ mappingPopulation.mappingPopulationCross.year}}</span>
						</div>
						
						<div class="col-xl-12 col-lg-11 mb-1">
							<label for="validationTooltip01">Pedigree Generation: </label>
							{% if mappingPopulation.pedigreeGeneration %}
								<a href="{{ path('generation_details', {id: mappingPopulation.pedigreeGeneration.id}) }}">
									<span class="tomato-color font-weight-bold">{{ mappingPopulation.pedigreeGeneration }}</span>
								</a>
							{% endif %}
						</div>
						
					<div class="card-footer text-muted">
					</div>
				</div>
			</div>
		</div>

		<div class="row mt-3">
			<div class="col-xl-6 col-lg-5">
				{# qtl study #}
				{% if mappingPopulation.qTLStudies | length > 0 %}
					<h4 class="d-flex justify-content-between align-items-center mb-3">
						<strong class="tomato-color">{{ mappingPopulation.qTLStudies | length == 1 ? 'Related QTL STudy Summary' : 'Related QTL STudies Summary' }}</strong>
						<span class="badge badge-danger badge-pill">{{ mappingPopulation.qTLStudies | length }}</span>
					</h4>

					<table id="datatable_qtl_study" class="table table-hover text-nowrap">
						<thead class="table-dark">
							<tr>
								<th>Name</th>
								<th>Variant Set Name</th>
								<th>Genome Map Unit</th>
								<th>QTL Count</th>
							</tr>
						</thead>
						<tbody>
							{% for qtlStudy in mappingPopulation.qTLStudies %}
								<tr>
									<td>
										<strong class="text-muted">
											<a href="{{ path('qtl_study_details', {id: qtlStudy.id}) }}">{{ qtlStudy.name }}</a>
										</strong>
									</td>

									<td>
										{% if qtlStudy.variantSetMetadata %}
											<strong class="text-muted">
												<a href="{{ path('variant_set_metadata_details', {id: qtlStudy.variantSetMetadata.id}) }}">{{ qtlStudy.variantSetMetadata }}</a>
											</strong>
										{% endif %}
									</td>

									<td>
										<strong class="text-muted">
											{{ qtlStudy.genomeMapUnit }}
										</strong>
									</td>

									<td>
										<strong class="text-muted">
											{{ qtlStudy.qtlCount }}
										</strong>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				{% endif %}
			</div>
		</div>

	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
    {% include 'resource/details_js.html.twig' %}
    <script>
        $(document).ready(function() {
            $('#datatable_qtl_study').DataTable();
        } );
    </script>
{% endblock %}

