{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-12 order-md-1">
				<h2 class="mb-3 text-center tomato-color font-weight-bold">Mapping Population Creation</h2>
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				{{ form_start(mappingPopulationForm) }}
				<div class="row">
					<div class="col-md-4 mb-3">
						{{ form_row
                                        (mappingPopulationForm.name,
                                            { label: "Name",
                                            'attr': {'placeholder': "Enter the name"}
                                            }
                                        )
                                    }}
					</div>
					<div class="col-md-4 mb-3">
						{{ form_row
                                        (mappingPopulationForm.mappingPopulationCross,
                                            { label: "Cross",
                                            'attr': {'placeholder': "Enter the cross",
                                            'class': "custom-select d-block w-100"}
                                            }
                                        )
                                    }}
					</div>

					<div class="col-md-4 mb-3">
						{{ form_row
                                        (mappingPopulationForm.pedigreeGeneration,
                                            { label: "Pedigree Generation",
                                            'attr': {'placeholder': "Enter the pedigree generation",
                                            'class': "custom-select d-block w-100"}
                                            }
                                        )
                                    }}
					</div>
				</div>

				<div class="row">
					<div class="col-md-6 mb-3">
						<button class="btn btn-outline-primary btn-lg btn-block" type="submit">Create</button>
					</div>

					<div class="col-md-6 mb-3">
						<button class="btn btn-outline-secondary btn-lg btn-block" type="reset">Cancel</button>
					</div>
				</div>
				{{ form_end(mappingPopulationForm) }}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}
