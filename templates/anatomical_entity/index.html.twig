{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12 order-md-1">
				{% if anatomicalEntities | length > 0 %}
					<h2 class="mb-3 text-center tomato-color font-weight-bold">Study List</h2>
					<div class="table-responsive">
						<table id="datatable" class="table table-hover text-nowrap" width="100%">
							<thead class="table-dark">
								<tr>
									<th scope="col">Name</th>
									<th scope="col">Description</th>
									<th scope="col">Action</th>
								</tr>
							</thead>
							<tbody>
								{% for anatomicalEntity in anatomicalEntities %}
									<tr>
										<td>
											<a href="{{ path('anatomical_entity_details', {id: anatomicalEntity.id}) }}">{{ anatomicalEntity.name }}</a>
										</td>
										<td>
											<a href="{{ path('anatomical_entity_details', {id: anatomicalEntity.id}) }}">{{ anatomicalEntity.description }}</a>
										</td>
										<td>
											<a href="{{ path('anatomical_entity_details', {id: anatomicalEntity.id}) }}">
												<button class="btn btn-outline-primary">View</button>
											</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				{% else %}
					<h5 class="mb-3 text-center tomato-color font-weight-bold">No anatomical entity has been provided in our system</h5>
				{% endif %}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}
