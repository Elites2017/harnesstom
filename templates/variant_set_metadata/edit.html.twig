{% extends 'base.html.twig' %}

{% form_theme variantSetMetadataForm _self %}

{% block datalist_widget %}
    <input {{ block('widget_attributes') }} list="variant_set_metadata_genotypingPlatform_list" value="{{ form.vars.value }}" />
    <datalist id="variant_set_metadata_genotypingPlatform_list">
        {% for choice in choices %}
            <option data-value="{{ choice.value }}">
                {{ choice.label }}
            </option>
        {% endfor %}
    <input type="hidden" name="variant_set_metadata[genotypingPlatform]" id="variant_set_metadata_genotypingPlatform_hidden">
    </datalist>
{% endblock %}

{% block datalist1_widget %}
    <input {{ block('widget_attributes') }} list="variant_set_metadata_software_list" value="{{ form.vars.value }}" />
    <datalist id="variant_set_metadata_software_list">
        {% for choice in choices %}
            <option data-value="{{ choice.value }}">
                {{ choice.label }}
            </option>
        {% endfor %}
    <input type="hidden" name="variant_set_metadata[software]" id="variant_set_metadata_software_hidden">
    </datalist>
{% endblock %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12 col-lg-11">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				<div class="card shadow mb-4">
					<!-- Card Header - Dropdown -->
					<div
						class="card-header py-3 flex-row align-items-center justify-content-between">
						<h4 class="m-0 font-weight-bold text-center tomato-color">Variant Set Metadata Edition</h4>
					</div>
					<!-- Card Body -->
					<div class="card-body">
						{{ form_start(variantSetMetadataForm) }}
						<div>
							{{ form_row
												(variantSetMetadataForm.name,
													{ label: "Name *",
													'attr': {'placeholder': "Enter the name"}
													}
												)
											}}
						</div>
						<div>
							{{ form_row
												(variantSetMetadataForm.description,
													{ label: "Description",
													'attr': {'placeholder': "Enter the description"}
													}
												)
											}}
						</div>
						<div class="row">
							<div class="col-md-6 mb-3">
								{{ form_row
												(variantSetMetadataForm.genotypingPlatform,
													{ label: "Genotyping platform",
													'attr': {'placeholder': "Select the genotyping platform",
													'class': "custom-select d-block w-100"}
													}
												)
											}}
							</div>

							<div class="col-md-6 mb-3">
								{{ form_row
												(variantSetMetadataForm.software,
													{ label: "Software",
													'attr': {'placeholder': "Select the software",
													'class': "custom-select d-block w-100"}
													}
												)
											}}
							</div>
						</div>

						<div>
							<div>
								{{ form_row
												(variantSetMetadataForm.filters,
													{ label: "Filters",
													'attr': {'placeholder': "Enter the filters"}
													}
												)
											}}
							</div>
						</div>

						<div class="row">
							<div class="col-md-6 mb-3">
								{{ form_row
												(variantSetMetadataForm.dataUpload,
													{ label: "VCF",
													'attr': {'placeholder': "Enter the VCF"}
													}
												)
											}}
							</div>

							<div class="col-md-6 mb-3">
								{{ form_row
												(variantSetMetadataForm.variantCount,
													{ label: "Variant count",
													'attr': {'placeholder': "Enter the variant count"}
													}
												)
											}}
							</div>
						</div>

						<div>
							<div>
								{# the data-index attribute is required for the JavaScript code below #}
								<ul class="tags" data-index="{{ variantSetMetadataForm.publicationRef|length > 0 ? variantSetMetadataForm.publicationRef|last.vars.name + 1 : 0 }}" data-prototype="{{ form_widget(variantSetMetadataForm.publicationRef.vars.prototype)|e('html_attr') }}">
								{% for pubRef in variantSetMetadataForm.publicationRef %}
									<li>
									{{ form_errors(pubRef) }}
									{{ form_widget(pubRef) }}
									</li>
								{% endfor %}
								</ul>
							</div>
							<button type="button"
								class="btn btn-outline-info mb-3 add_item_link"
								data-collection-holder-class="tags">
								Add publication reference
							</button>
						</div>

						<div class="row">
							{% include 'resource/btn_update.html.twig' %}
						</div>
						{{ form_end(variantSetMetadataForm) }}
					</div>
				</div>
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
    {% include 'resource/create_edit_js.html.twig' %}
	<script>
		$('.custom-file-input').on('change', function(event) {
		let inputFile = event.currentTarget;
		$(inputFile).parent().find('.custom-file-label').html(inputFile.files[0].name);
		});
	</script>
{% endblock %}
