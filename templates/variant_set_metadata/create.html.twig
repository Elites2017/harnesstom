{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12 col-lg-11">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				<div class="card shadow mb-4">
					<!-- Card Header - Dropdown -->
					<div
						class="card-header py-3 flex-row align-items-center justify-content-between">
						<h4 class="m-0 font-weight-bold text-center tomato-color">New Variant Set Metadata</h4>
					</div>
					<!-- Card Body -->
					<div class="card-body">
						{{ form_start(variantSetMetadataForm) }}
						<div>
							{{ form_row
												(variantSetMetadataForm.name,
													{ label: "Name *",
													'attr': {'placeholder': "Enter the name"}
													}
												)
											}}
						</div>
						<div>
							{{ form_row
												(variantSetMetadataForm.description,
													{ label: "Description",
													'attr': {'placeholder': "Enter the description"}
													}
												)
											}}
						</div>
						<div class="row">
							<div class="col-md-6 mb-3">
								{{ form_row
												(variantSetMetadataForm.genotypingPlatform,
													{ label: "Genotyping platform",
													'attr': {'placeholder': "Select the genotyping platform",
													'class': "custom-select d-block w-100"}
													}
												)
											}}
							</div>

							<div class="col-md-6 mb-3">
								{{ form_row
												(variantSetMetadataForm.software,
													{ label: "Software",
													'attr': {'placeholder': "Select the software",
													'class': "custom-select d-block w-100"}
													}
												)
											}}
							</div>
						</div>

						<div>
							<div>
								{{ form_row
												(variantSetMetadataForm.filters,
													{ label: "Filters",
													'attr': {'placeholder': "Enter the filters"}
													}
												)
											}}
							</div>
						</div>

						<div class="row">
							<div class="col-md-6 mb-3">
								{{ form_row
												(variantSetMetadataForm.dataUpload,
													{ label: "VCF",
													'attr': {'placeholder': "Enter the VCF"}
													}
												)
											}}
							</div>

							<div class="col-md-6 mb-3">
								{{ form_row
												(variantSetMetadataForm.variantCount,
													{ label: "Variant count",
													'attr': {'placeholder': "Enter the variant count"}
													}
												)
											}}
							</div>
						</div>
						
						<div>
							<div id="email-fields-list" data-prototype="{{ form_widget(variantSetMetadataForm.publicationRef.vars.prototype)|e }}" data-widget-tags="{{ '<div class="row mx-auto mb-3"> </div>'|e }}" data-widget-counter="{{ variantSetMetadataForm.publicationRef|length }}">
								{% for pubRef in variantSetMetadataForm.publicationRef %}
									<li>
										{{ form_errors(pubRef) }}
										{{ form_widget(pubRef) }}
									</li>
								{% endfor %}
							</div>
							<button type="button" class="btn btn-outline-info mb-3 add-another-collection-widget" data-list-selector="#email-fields-list">Add publication reference</button>
						</div>

						<div class="row">
							<div class="col-md-6 mb-3">
								<button class="btn btn-outline-primary btn-lg btn-block" type="submit">Create</button>
							</div>

							<div class="col-md-6 mb-3">
								<button class="btn btn-outline-secondary btn-lg btn-block" type="reset">Cancel</button>
							</div>
						</div>
						{{ form_end(variantSetMetadataForm) }}
					</div>
				</div>
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}
