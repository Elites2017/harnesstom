{% extends 'base.html.twig' %}

{% form_theme programForm _self %}

{% block datalist_widget %}
    <input {{ block('widget_attributes') }} list="program_crop_list" value="{{ form.vars.value }}" />
    <datalist id="program_crop_list">
        {% for choice in choices %}
            <option data-value="{{ choice.value }}">
                {{ choice.label }}
            </option>
        {% endfor %}
    <input type="hidden" name="program[crop]" id="program_crop_hidden">
    </datalist>
{% endblock %}

{% block datalist1_widget %}
    <input {{ block('widget_attributes') }} list="program_contact_list" value="{{ form.vars.value }}" />
    <datalist id="program_contact_list">
        {% for choice in choices %}
            <option data-value="{{ choice.value }}">
                {{ choice.label }}
            </option>
        {% endfor %}
    <input type="hidden" name="program[contact]" id="program_contact_hidden">
    </datalist>
{% endblock %}

{% block title %}
  {{ title }}
{% endblock %}

{% block body %}
  <div class="container-fluid">
    <div class="row">
      <div class="col-xl-12 col-lg-11">
        {% for category, messages in app.flashes(
          ['success', 'warning', 'danger']
        ) %}
          {% for message in messages %}
            <div class="alert alert-{{ category }} alert-dismissible fade show"
              role="alert">
              {{ message }}
              <button type="button"
                class="close"
                data-dismiss="alert"
                aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          {% endfor %}
        {% endfor %}
        <div class="card shadow mb-4">
          <!-- Card Header - Dropdown -->
          <div class="card-header py-3 flex-row align-items-center justify-content-between">
            <h4 class="m-0 font-weight-bold text-center tomato-color">
              New Program
            </h4>
          </div>
          <!-- Card Body -->
          <div class="card-body">
            {{ form_start(programForm) }}
            <div>
              {{
                form_row(
                  programForm.name,
                  {
                    label: 'Name *',
                    attr: {
                      placeholder: 'Enter the program name'
                    }
                  }
                )
              }}
            </div>
            <div>
              {{
                form_row(
                  programForm.abbreviation,
                  {
                    label: 'Abbreviation',
                    attr: {
                      placeholder: 'Enter the program abbreviation'
                    }
                  }
                )
              }}
            </div>
            <div>
              {{
                form_row(
                  programForm.objective,
                  {
                    label: 'Objective',
                    attr: {
                      placeholder: 'Enter the program objective'
                    }
                  }
                )
              }}
            </div>
            <div>
              {{
                form_row(
                  programForm.externalRef,
                  {
                    label: 'External reference',
                    attr: {
                      placeholder: 'Enter the program external reference'
                    }
                  }
                )
              }}
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                {{
                  form_row(
                    programForm.crop,
                    {
                      label: 'Crop',
                      attr: {
                        placeholder: 'Select the program crop',
                        class: 'custom-select d-block w-100'
                      }
                    }
                  )
                }}
              </div>

              <div class="col-md-6 mb-3">
                {{
                  form_row(
                    programForm.contact,
                    {
                      label: 'Contact',
                      attr: {
                        placeholder: 'Select the program contact',
                        class: 'custom-select d-block w-100'
                      }
                    }
                  )
                }}
              </div>
            </div>

            <div class="row">
              {% include 'resource/btn_create.html.twig' %}
            </div>
            {{ form_end(programForm) }}
          </div>
        </div>
      </div>
    </div>
    <!-- .row -->
  </div>
  <!-- .container -->
{% endblock %}

{% block javascripts %}
<script src="{{ asset('assets/nl/vendor/jquery/jquery.min.js') }}"></script>
<script src="{{ asset('assets/js/jquery-3.5.1.js') }}"></script>
<script src="{{ asset('assets/nl/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

<!-- Core plugin JavaScript-->
<script src="{{ asset('assets/nl/vendor/jquery-easing/jquery.easing.min.js') }}"></script>

<!-- Custom scripts for all pages-->
<script src="{{ asset('assets/nl/js/sb-admin-2.min.js') }}"></script>

<script src="{{ asset('assets/nl/js/jquery-match-height-0.7.2.min.js') }}"></script>
<script src="{{ asset('assets/nl/js/main.js') }}"></script>

<script src="{{ asset('assets/js/datalist_widget.js') }}"></script>
{% endblock %}

