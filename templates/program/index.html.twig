{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container-fluid">
		<div class="row">
			<div class="col-md-12 order-md-1">
				{% if programs | length > 0 %}
                    <h2 class="mb-3 text-center tomato-color font-weight-bold">Program List</h2>
                    {% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
						{% for message in messages %}
							<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
								<button type="button" class="close" data-dismiss="alert" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
						{% endfor %}
					{% endfor %}
                    <div class="table-responsive">
                        <table id="datatable" class="table table-hover text-nowrap" width="100%">
                            <thead class="table-dark">
                                <tr>
                                <th scope="col">Abbreviation</th>
                                <th scope="col">Name</th>
                                <th scope="col">Crop</th>
                                <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for program in programs %}
                                    <tr>
                                        <td>{{ program.abbreviation }}</td>
                                        <td>{{ program.name }}</td>
                                        <td>{{ program.crop }}</td>
                                        {# <td>{{ program.objective|length > 50 ? program.objective|slice(0, 50) ~ '...' : program.objective }}</td> #}
                                        <td>
                                            <a href="{{ path('program_details', {id: program.id}) }}"><button class="btn btn-outline-primary">Details</button></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %} 
                    <h5 class="mb-3 text-center tomato-color font-weight-bold">No program has been provided in our system</h5>
                {% endif %}     
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
    {% include 'resource/list_js.html.twig' %}

    <script>
        $(document).ready(function() {
            $('#datatable').DataTable();
        } );
    </script>
{% endblock %}
