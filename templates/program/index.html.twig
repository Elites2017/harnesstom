{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/css1/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css1/dropdown_link_right.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/btdist/css/bootstrap.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('assets/fonts/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('assets/btdist/css/bootstrap4-toggle.min.css') }}" rel="stylesheet" type="text/css">
    <!-- DataTables CSS -->
    <link href="{{ asset('assets/datatables/css/dataTables.bootstrap4.min.css') }}" rel="stylesheet">

    <!-- DataTables Responsive CSS -->
    <link href="{{ asset('assets/datatables/css/dataTables.responsive.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <main class="main-content">
        <div class="fullwidth-block">
		</div> <!-- .fullwidth-block -->
        <div class="fullwidth-block">
            <div class="container">
                <div class="row">
                        <div class="card-body">
                            {% if programs | length > 0 %}
                                <h1 class="tomato-color">Program List</h1>
                                <table id="datatable" class="table table-striped table-bordered" width="100%">
                                <thead>
                                    <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Abbreviation</th>
                                    <th scope="col">Objective</th>
                                    <th scope="col">Crop</th>
                                    <th scope="col">External Reference</th>
                                    <th scope="col">Contact</th>
                                    <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for program in programs %}
                                    <tr>
                                        <td><a href="{{ path('program_details', {id: program.id}) }}">{{ program.name }}</a></td>
                                        <td><a href="{{ path('program_details', {id: program.id}) }}">{{ program.abbreviation }}</a></td>
                                        <td><a href="{{ path('program_details', {id: program.id}) }}">{{ program.objective }}</a></td>
                                        <td><a href="{{ path('program_details', {id: program.id}) }}">{{ program.crop }}</a></td>
                                        <td><a href="{{ path('program_details', {id: program.id}) }}">{{ program.externalRef }}</a></td>
                                        <td><a href="{{ path('program_details', {id: program.id}) }}">{{ program.contact }}</a></td>
                                        <td>
                                            <a href="{{ path('program_details', {id: program.id}) }}"><button class="btn btn-outline-primary">View</button></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% else %} 
                                <p class="tomato-color">No program has been provided in our system</p>
                            {% endif %}
                        </tbody>
                        </table>
                     
                        </div>
                    </div>
                    </div>
                </div> <!-- .row -->
            </div> <!-- .container -->
        </div> <!-- .fullwidth-block -->
    </main> <!-- .main-content -->
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
		<script>window.jQuery || document.write('<script src="{{ asset('assets/js1/vendor/jquery.slim.min.js') }}"><\/script>')</script>
		<script src="{{ asset('assets/js1/bootstrap.bundle.min.js') }}"></script>
<!-- DataTables JavaScript -->
    <script src="{{ asset('assets/datatables/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assets/datatables/js/dataTables.bootstrap4.min.js') }}"></script>
    <script src="{{ asset('assets/datatables/js/dataTables.responsive.js') }}"></script>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function() {
            $('#datatable').DataTable();
        } );
    </script>
{% endblock %}
