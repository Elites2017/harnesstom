{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}


{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12 order-md-1">
                <h2 class="mb-3 text-center tomato-color font-weight-bold">Attribute Trait Value Creation</h2>
                {% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
                    {% for message in messages %}
                        <div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        </div>
                    {% endfor %}
                {% endfor %}
                {{ form_start(attributeTraitValueForm) }}
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            {{ form_row
                                   (attributeTraitValueForm.attribute,
                                    { label: "Attribute *",
                                        'attr': {'placeholder': "Select the attribute",
                                        'class': "custom-select d-block w-100"}
                                    })
                        }}
                        </div>

                        <div class="col-md-4 mb-3">
                             {{ form_row
                            (attributeTraitValueForm.trait,
                                { label: "Trait",
                                'attr': {'placeholder': "Select the trait",
                                        'class': "custom-select d-block w-100"}
                                }
                            )
                        }}
                        </div>

                        <div class="col-md-4 mb-3">
                            {{ form_row
                            (attributeTraitValueForm.metabolicTrait,
                                { label: "Metabolic Trait",
                                'attr': {'placeholder': "Select the metabolica trait",
                                        'class': "custom-select d-block w-100"}
                                }
                            )
                        }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            {{ form_row
                                    (attributeTraitValueForm.accession,
                                    { label: "Accession",
                                        'attr': {'placeholder': "Select the accession",
                                        'class': "custom-select d-block w-100"}
                                    })
                        }}
                        </div>

                        <div class="col-md-4 mb-3">
                            {{ form_row
                            (attributeTraitValueForm.publicationReference,
                                { label: "Publication Reference",
                                'attr': {'placeholder': "Enter the publication reference"}
                                }
                            )
                        }}
                        </div>

                        <div class="col-md-4 mb-3">
                            {{ form_row
                            (attributeTraitValueForm.value,
                                { label: "Value",
                                'attr': {'placeholder': "Enter the value"}
                                }
                            )
                        }}
                        </div>
                    </div>
                    {% if is_granted("ROLE_ADMIN") %}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row (attributeTraitValueForm.isActive) }}
                            </div>
                        </div>
                    {% endif %}
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <button class="btn btn-outline-primary btn-lg btn-block" type="submit">Update</button>
                        </div>

                        <div class="col-md-6 mb-3">
                            <button class="btn btn-outline-secondary btn-lg btn-block" type="reset">Cancel</button>
                        </div>
                    </div>
                {{ form_end(attributeTraitValueForm) }}
            </div>
        </div>
    </div>
{% endblock %}
