{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12 col-lg-11">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				<div class="card shadow mb-4">
					<!-- Card Header - Dropdown -->
					<div
						class="card-header py-3 flex-row align-items-center justify-content-between">
						<h4 class="m-0 font-weight-bold text-center tomato-color">Attribute Trait Value Edition</h4>
					</div>
					<!-- Card Body -->
					<div class="card-body">
						{{ form_start(attributeTraitValueForm) }}
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    {{ form_row
                                        (attributeTraitValueForm.attribute,
                                            { label: "Attribute *",
                                                'attr': {'placeholder': "Select the attribute",
                                                'class': "custom-select d-block w-100"}
                                            })
                                }}
                                </div>

                                <div class="col-md-4 mb-3">
                                    {{ form_row
                                    (attributeTraitValueForm.trait,
                                        { label: "Trait",
                                        'attr': {'placeholder': "Select the trait",
                                                'class': "custom-select d-block w-100"}
                                        }
                                    )
                                }}
                                </div>

                                <div class="col-md-4 mb-3">
                                    {{ form_row
                                    (attributeTraitValueForm.metabolicTrait,
                                        { label: "Metabolic Trait",
                                        'attr': {'placeholder': "Select the metabolica trait",
                                                'class': "custom-select d-block w-100"}
                                        }
                                    )
                                }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    {{ form_row
                                            (attributeTraitValueForm.accession,
                                            { label: "Accession",
                                                'attr': {'placeholder': "Select the accession",
                                                'class': "custom-select d-block w-100"}
                                            })
                                }}
                                </div>

                                <div class="col-md-4 mb-3">
                                    {{ form_row
                                    (attributeTraitValueForm.value,
                                        { label: "Value",
                                        'attr': {'placeholder': "Enter the value"}
                                        }
                                    )
                                }}
                                </div>
                            </div>

                            <div>
                                <div>
                                    {# the data-index attribute is required for the JavaScript code below #}
                                    <ul class="tags" data-index="{{ attributeTraitValueForm.publicationReference|length > 0 ? attributeTraitValueForm.publicationReference|last.vars.name + 1 : 0 }}" data-prototype="{{ form_widget(attributeTraitValueForm.publicationReference.vars.prototype)|e('html_attr') }}">
                                    {% for pubRef in attributeTraitValueForm.publicationReference %}
                                        <li>
                                        {{ form_errors(pubRef) }}
                                        {{ form_widget(pubRef) }}
                                        </li>
                                    {% endfor %}
                                    </ul>
                                </div>
                                <button type="button"
                                    class="btn btn-outline-info mb-3 add_item_link"
                                    data-collection-holder-class="tags">
                                    Add publication reference
                                </button>
                            </div>
                            
                            <div class="row">
                                {% include 'resource/btn_update.html.twig' %}
                            </div>
                        {{ form_end(attributeTraitValueForm) }}
					</div>
				</div>
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
  <script src="{{ asset('assets/js/jquery-3.5.1.js') }}"></script>
  <script src="{{ asset('assets/js/bootstrap4-toggle.min.js') }}"></script>
  <script src="{{ asset('assets/js/add-remove-collection-tag-widget.js') }}"></script>
  <script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>
{% endblock %}