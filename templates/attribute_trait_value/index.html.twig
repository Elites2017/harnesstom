{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block stylesheets %}
    <!-- Bootstrap core CSS -->
    <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/bootstrap-toggle.min.css') }}" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="{{ asset('assets/css/jumbotron.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/custom_dropdown.css') }}" rel="stylesheet">
    <!-- DataTables CSS -->
    <link href="{{ asset('assets/datatables/css/dataTables.bootstrap4.min.css') }}" rel="stylesheet">

    <!-- DataTables Responsive CSS -->
    <link href="{{ asset('assets/datatables/css/dataTables.responsive.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container-fluid">
		<div class="row">
			<div class="col-md-12 order-md-1">
                {% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
                    {% for message in messages %}
                        <div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    {% endfor %}
                {% endfor %}
				{% if attributeTraitValues | length > 0 %}
                    <h2 class="mb-3 text-center tomato-color font-weight-bold">Attribute Trait Value List</h2>
                    <div class="table-responsive"> 
                        <table id="datatable" class="table table-hover text-nowrap" width="100%">
                            <thead class="table-dark">
                                <tr>
                                <th scope="col">Accession</th>
                                <th scope="col">Attribute</th>
                                <th scope="col">Attribute Category</th>
                                <th scope="col">Trait</th>
                                <th scope="col">Metabolic Trait</th>
                                <th scope="col">Value</th>
                                <th scope="col">Publication Reference</th>
                                <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                {% else %} 
                    <h5 class="mb-3 text-center tomato-color font-weight-bold">No attribute trait value has been provided in our system</h5>
                {% endif %}     
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script>
        window.jQuery || document.write('<script src=" {{ asset('assets/js1/vendor/jquery.slim.min.js') }}"><\/script>')
    </script>
    <script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>
    <!-- DataTables JavaScript -->
    <script src="{{ asset('assets/datatables/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('assets/datatables/js/dataTables.bootstrap4.min.js') }}"></script>
    <script src="{{ asset('assets/datatables/js/dataTables.responsive.js') }}"></script>

    <script>
        $(document).ready(function() {
            let data = [
                {% for attributeTraitValue in attributeTraitValues %}
                    {
                    accession: "<a href={{ path('attribute_trait_value_details', {id: attributeTraitValue.id}) }}>{{ attributeTraitValue.accession }}</a>",
                    attribute: "<a href={{ path('attribute_trait_value_details', {id: attributeTraitValue.id}) }}>{{ attributeTraitValue.attribute }}</a>",
                    attributeCategory: "<a href={{ path('attribute_trait_value_details', {id: attributeTraitValue.id}) }}>{{ attributeTraitValue.attribute.category }}</a>",
                    trait: "<a href={{ path('attribute_trait_value_details', {id: attributeTraitValue.id}) }}>{{ attributeTraitValue.trait }}</a>",
                    metabolicTrait: "<a href={{ path('attribute_trait_value_details', {id: attributeTraitValue.id}) }}>{{ attributeTraitValue.metabolicTrait }}</a>",
                    value: "<a href={{ path('attribute_trait_value_details', {id: attributeTraitValue.id}) }}>{{ attributeTraitValue.value }}</a>",
                    publicationReferences: "{% if attributeTraitValue.publicationReference | length > 0 %}{% for onePubRef in attributeTraitValue.publicationReference %}<a href={{ path('attribute_trait_value_details', {id: attributeTraitValue.id}) }}>{{ onePubRef }}</a>{% endfor %}{% endif %}",
                    action: "<a href={{ path('attribute_trait_value_details', {id: attributeTraitValue.id}) }}><button class='btn btn-outline-primary'>View</button></a>"
                    },
                {% endfor %}
            ];

            $('#datatable').DataTable( {
                "bDestroy": true,
                "pageLength": 25,
                data: data,
                columns: [
                    { data: 'accession'},
                    { data: 'attribute'},
                    { data: 'attributeCategory'},
                    { data: 'trait'},
                    { data: 'metabolicTrait'},
                    { data: 'value'},
                    { data: 'publicationReferences'},
                    { data: 'action'}
                ]
            } );
        } );
    </script>
{% endblock %}
