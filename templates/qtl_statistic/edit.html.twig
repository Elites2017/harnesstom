{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12 col-lg-11">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				<div class="card shadow mb-4">
					<!-- Card Header - Dropdown -->
					<div
						class="card-header py-3 flex-row align-items-center justify-content-between">
						<h4 class="m-0 font-weight-bold text-center tomato-color">QTL Statistic Edition</h4>
					</div>
					<!-- Card Body -->
					<div class="card-body">
						{{ form_start(qtlStatisticForm) }}
						<div class="row">
							<div class="col-md-4 mb-3">
								{{ form_row(qtlStatisticForm.ontology_id, {'attr': {'placeholder' : 'Enter the ontology id'}}) }}
							</div>

							<div class="col-md-4 mb-3">
								{{ form_row(qtlStatisticForm.parentTerm, {'attr': {'placeholder' : 'Enter the parent term', 'class': "custom-select d-block w-100"}}) }}
							</div>

							<div class="col-md-4 mb-3">
								{{ form_row(qtlStatisticForm.name, {'attr': {'placeholder' : 'Enter the qtl statistic name'}}) }}
							</div>
						</div>

						<div class="row">
							<div class="col-md-12 mb-3">
								{{ form_row(qtlStatisticForm.description, {'attr': {'placeholder' : 'Enter the qtl statistic description'}}) }}
							</div>
						</div>
						<div class="row">
							<div class="col-md-6 mb-3">
								<button class="btn btn-outline-primary btn-lg btn-block" type="submit">Update</button>
							</div>

							<div class="col-md-6 mb-3">
								<button class="btn btn-outline-secondary btn-lg btn-block" type="reset">Cancel</button>
							</div>
						</div>
						{{ form_end(qtlStatisticForm) }}
					</div>
				</div>
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}
