{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <main class="main-content">
        <div class="fullwidth-block">
		</div> <!-- .fullwidth-block -->

        <div class="fullwidth-block">
            <div class="container">
                <div class="row">
                        <div class="card-body">
                            <h1 class="tomato-color">Collecting Source</h1>
                            {{ form_start(collectingSourceForm) }}
                                <div class="form-group">
                                    {{ form_row(collectingSourceForm.label, {'attr': {'placeholder' : 'Enter the label'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(collectingSourceForm.code, {'attr': {'placeholder' : 'Enter the code'}}) }} 
                                </div>
                                <div class="form-group">
                                    {{ form_row(collectingSourceForm.parentTerm, {'attr': {'placeholder' : 'Enter the parent term'}}) }} 
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-outline-primary">Create</button>
                                    <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                                </div>
                            {{ form_end(collectingSourceForm) }}
                        </div>
                    </div>
                    </div>
                </div> <!-- .row -->
            </div> <!-- .container -->
        </div> <!-- .fullwidth-block -->
    </main> <!-- .main-content -->
{% endblock %}
