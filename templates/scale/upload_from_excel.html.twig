{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-12 order-md-1">
				<h2 class="mb-3 text-center tomato-color font-weight-bold">Scale Upload From Excel</h2>
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				<div class="mb-3">
					<a href="{{ path('scale_download_template') }}" download target="_blank">
						<h1>Click to download a template example</h1></br>
						<h3>NOTE: Your data must be in the same format as the template example file format</h3>
					<img src="{{ asset('assets/images/excelicon.png') }}" alt="Example of excel template" width="104" height="142">
				</a>
			</div>
			{{ form_start(scaleUploadFromExcelForm) }}
			<div>
				{{ form_row(scaleUploadFromExcelForm.file, {label: "Upload Data From An Excel File", 'attr': {'placeholder': "Choose an excel file", 'accept':".txt, .xls, .xlsx" }}) }}
			</div>

			<div class="row">
				{% include 'resource/btn_upload.html.twig' %}
			</div>
			{{ form_end(scaleUploadFromExcelForm) }}
		</div>
	</div>
	<!-- .row -->
</div>
<!-- .container -->{% endblock %}
