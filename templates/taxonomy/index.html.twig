{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
		{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
			{% for message in messages %}
				<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
			{% endfor %}
		{% endfor %}
			<div class="col-md-12 order-md-1">
				{% if taxonomies | length > 0 %}
					<h2 class="mb-3 text-center tomato-color font-weight-bold">Taxonomy List</h2>
					<div class="table-responsive">
						<table id="datatable" class="table table-hover text-nowrap" width="100%">
							<thead class="table-dark">
								<tr>
									<th scope="col">Taxon ID</th>
									<th scope="col">Genus</th>
									<th scope="col">Species</th>
									<th scope="col">Subtaxa</th>
									<th scope="col">Action</th>
								</tr>
							</thead>
							<tbody>
								{% for taxonomy in taxonomies %}
									<tr>
										<td>
											{{ taxonomy.taxonid }}
										</td>
										<td>
											{{ taxonomy.genus }}
										</td>
										<td>
											{{ taxonomy.species }}
										</td>
										<td>
											{{ taxonomy.subtaxa }}
										</td>
										<td>
											<a href="{{ path('taxonomy_details', {id: taxonomy.id}) }}">
												<button class="btn btn-outline-primary">Details</button>
											</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				{% else %}
					<h5 class="mb-3 text-center tomato-color font-weight-bold">No taxonomy has been provided in our system</h5>
				{% endif %}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
	{% include 'resource/list_js.html.twig' %}
	
<script>
		$(document).ready(function () {
$('#datatable').DataTable();
});
	</script>
{% endblock %}
