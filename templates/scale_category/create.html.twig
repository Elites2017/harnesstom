{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <main class="main-content">
        <div class="fullwidth-block">
		</div> <!-- .fullwidth-block -->

        <div class="fullwidth-block">
            <div class="container">
                <div class="row">
                        <div class="card-body">
                            <h1 class="tomato-color">Scale Category</h1>
                            {{ form_start(scaleCategoryForm) }}
                                <div class="form-group">
                                    {{ form_row(scaleCategoryForm.label, {'attr': {'placeholder' : 'Enter the the scale category label'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(scaleCategoryForm.score, {'attr': {'placeholder' : 'Enter the the score'}}) }} 
                                </div>
                                <div class="form-group">
                                    {{ form_row(scaleCategoryForm.min, {'attr': {'placeholder' : 'Enter the the min value'}}) }} 
                                </div>
                                <div class="form-group">
                                    {{ form_row(scaleCategoryForm.max, {'attr': {'placeholder' : 'Enter the the max value'}}) }} 
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-outline-primary">Create</button>
                                    <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                                </div>
                            {{ form_end(scaleCategoryForm) }}
                        </div>
                    </div>
                    </div>
                </div> <!-- .row -->
            </div> <!-- .container -->
        </div> <!-- .fullwidth-block -->
    </main> <!-- .main-content -->
{% endblock %}
