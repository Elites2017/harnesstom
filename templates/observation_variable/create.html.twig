{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}


{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-12 order-md-1">
				<h2 class="mb-3 text-center tomato-color font-weight-bold">New Observation Variable</h2>
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				{{ form_start(observationVariableForm) }}
				<div class="row">
					<div class="col-md-6 mb-3">
						{{ form_row
                                        (observationVariableForm.name,
                                            { label: "Analyte",
                                            'attr': {'placeholder': "Enter the metabolite analyte"}
                                            }
                                        )
                                    }}
					</div>

					<div class="col-md-6 mb-3">
						{{ form_row
                                        (observationVariableForm.mainAbbreviaition,
                                            { label: "Metabolic trait",
                                            'attr': {'placeholder': "Select the metabolite metabolic trait"}
                                            }
                                        )
                                    }}
					</div>
				</div>
				<div>
					{{ form_row
                                        (observationVariableForm.description,
                                            { label: "Scale",
                                            'attr': {'placeholder': "Select the metabolite scale"}
                                            }
                                        )
                                    }}
				</div>
				<div class="row">
					<div class="col-md-4 mb-3">
						{{ form_row
                                        (observationVariableForm.trait,
                                            { label: "Trait",
                                            'attr': {'placeholder': "Select the observation variable trait",
                                            'class': "custom-select d-block w-100"}
                                            }
                                        )
                                    }}
					</div>

					<div class="col-md-4 mb-3">
						{{ form_row
                                        (observationVariableForm.scale,
                                            { label: "Scale",
                                            'attr': {'placeholder': "Select the observation variable scale",
                                            'class': "custom-select d-block w-100"}
                                            }
                                        )
                                    }}
					</div>
					<div class="col-md-4 mb-3">
						{{ form_row
                                        (observationVariableForm.observationVariableMethod,
                                            { label: "Observation variable method",
                                            'attr': {'placeholder': "Select the observation variable method",
                                            'class': "custom-select d-block w-100"}
                                            }
                                        )
                                    }}
					</div>
				</div>
				<div class="row">
					<div class="col-md-6 mb-3">
						<button class="btn btn-outline-primary btn-lg btn-block" type="submit">Create</button>
					</div>

					<div class="col-md-6 mb-3">
						<button class="btn btn-outline-secondary btn-lg btn-block" type="reset">Cancel</button>
					</div>
				</div>
				{{ form_end(observationVariableForm) }}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}
