{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12 col-lg-11">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				<div class="card shadow mb-4">
					<!-- Card Header - Dropdown -->
					<div
						class="card-header py-3 flex-row align-items-center justify-content-between">
						<h4 class="m-0 font-weight-bold text-center tomato-color">Observation Variable Edition</h4>
					</div>
					<!-- Card Body -->
					<div class="card-body">
						{{ form_start(observationVariableForm) }}
						<div class="row">
							<div class="col-md-6 mb-3">
								{{ form_row
												(observationVariableForm.name,
													{ label: "Analyte",
													'attr': {'placeholder': "Enter the metabolite analyte"}
													}
												)
											}}
							</div>

							<div class="col-md-6 mb-3">
								{{ form_row
												(observationVariableForm.mainAbbreviaition,
													{ label: "Metabolic trait",
													'attr': {'placeholder': "Select the metabolite metabolic trait"}
													}
												)
											}}
							</div>
						</div>
						<div>
							{{ form_row
												(observationVariableForm.description,
													{ label: "Scale",
													'attr': {'placeholder': "Select the metabolite scale"}
													}
												)
											}}
						</div>
						<div class="row">
							<div class="col-md-4 mb-3">
								{{ form_row
												(observationVariableForm.trait,
													{ label: "Trait",
													'attr': {'placeholder': "Select the observation variable trait",
													'class': "custom-select d-block w-100"}
													}
												)
											}}
							</div>

							<div class="col-md-4 mb-3">
								{{ form_row
												(observationVariableForm.scale,
													{ label: "Scale",
													'attr': {'placeholder': "Select the observation variable scale",
													'class': "custom-select d-block w-100"}
													}
												)
											}}
							</div>
							<div class="col-md-4 mb-3">
								{{ form_row
												(observationVariableForm.observationVariableMethod,
													{ label: "Observation variable method",
													'attr': {'placeholder': "Select the observation variable method",
													'class': "custom-select d-block w-100"}
													}
												)
											}}
							</div>
						</div>
						<div class="row">
							{% include 'resource/btn_update.html.twig' %}
						</div>
						{{ form_end(observationVariableForm) }}
					</div>
				</div>
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}
