{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container-fluid">
		<div class="row">
			<div class="col-md-12 order-md-1">
                {% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				{% if germplasms | length > 0 %}
                    <h2 class="mb-3 text-center tomato-color font-weight-bold">Germplasm List</h2>
                    <div class="table-responsive"> 
                        <table id="datatable" class="table table-hover text-nowrap" width="100%">
                            <thead class="table-dark">
                                <tr>
                                <th scope="col">Germplasm ID</th>
                                <th scope="col" data-orderable="false"></th>
                                <th scope="col">INSTCODE</th>
                                <th scope="col">Maintainer Number</th>
                                <th scope="col" data-orderable="false"></th>
                                <th scope="col">Program</th>
                                <th scope="col" data-orderable="false">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                {% else %} 
                    <h5 class="mb-3 text-center tomato-color font-weight-bold">No germplasm has been provided in our system</h5>
                {% endif %}     
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
    {% include 'resource/list_js.html.twig' %}

    <script>
		let dataTableId = "#datatable";
		let linkInstId = "";
		let linkProgId = "";
        let colsDef = [
				// These are the column name variables that will be sent to the server
				{ "data": "germplasmID", "targets": 2 },
                {
				"data": "inst_id", "targets": 11,
					"render": function(data, type, row, meta) {
						linkInstId = data;
						return null;
					}
				},
				{
				"data": "inst_instcode", "targets": 12,
					"render": function(data, type, row, meta) {
						if (data) {
							let url = '{{ path("institute_details", {'id': 'dataId'}) }}'; 
							url = url.replace("dataId", linkInstId);
							let actionlink = "<a href="+ url +">"+data+"</a>";
							return actionlink;
						} else {
							return null;
						}
					}
				},
                { "data": "maintainerNumb", "targets": 3 },
                {
				"data": "prog_id", "targets": 11,
					"render": function(data, type, row, meta) {
						linkProgId = data;
						return null;
					}
				},
				{
				"data": "prog_abbreviation", "targets": 12,
					"render": function(data, type, row, meta) {
						if (data) {
							let url = '{{ path("program_details", {'id': 'dataId'}) }}'; 
							url = url.replace("dataId", linkProgId);
							let actionlink = "<a href="+ url +">"+data+"</a>";
							return actionlink;
						} else {
							return null;
						}
					}
				},
				{
				"data": "id", "targets": 14,
					"render": function(data, type, row, meta) {
						let url = '{{ path("germplasm_details", {'id': 'dataId'}) }}'; 
						url = url.replace("dataId", data);
						let actionlink = "<a href="+ url +"><button class='btn btn-outline-primary'>Details</button></a>";
						return actionlink;
					}
				}
			];
		let url = "{{ path('germplasm_datatable') }}";
		// call the function with data table id, columns & ajax url args
		dataTable(dataTableId, colsDef, url);
    </script>
{% endblock %}
