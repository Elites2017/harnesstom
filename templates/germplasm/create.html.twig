						<h4 class="m-0 font-weight-bold text-center tomato-color">New Germplasm</h4>
					</div>
					<!-- Card Body -->
					<div class="card-body">
						{{ form_start(germplasmForm) }}
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                {{ form_row
                                    (germplasmForm.germplasmID,
                                        { label: "ID *",
                                            'attr': {'placeholder': "Enter the germplasm ID"}
                                        })
                            }}
                            </div>

                            {# <div class="col-md-4 mb-3">
                                {{ form_row
                                (germplasmForm.accession,
