{% extends 'base.html.twig' %}

{% form_theme germplasmForm _self %}

{% block datalist_widget %}
    <input {{ block('widget_attributes') }} list="germplasm_maintainerInstituteCode_list" value="{{ form.vars.value }}" />
    <datalist id="germplasm_maintainerInstituteCode_list">
        {% for choice in choices %}
            <option data-value="{{ choice.value }}">
                {{ choice.label }}
            </option>
        {% endfor %}
    <input type="hidden" name="germplasm[maintainerInstituteCode]" id="germplasm_maintainerInstituteCode_hidden">
    </datalist>
{% endblock %}

{% block datalist1_widget %}
    <input {{ block('widget_attributes') }} list="germplasm_accession_list" value="{{ form.vars.value }}" />
    <datalist id="germplasm_accession_list">
        {% for choice in choices %}
            <option data-value="{{ choice.value }}">
                {{ choice.label }}
            </option>
        {% endfor %}
    <input type="hidden" name="germplasm[accession]" id="germplasm_accession_hidden">
    </datalist>
{% endblock %}

{% block datalist2_widget %}
    <input {{ block('widget_attributes') }} list="germplasm_program_list" value="{{ form.vars.value }}" />
    <datalist id="germplasm_program_list">
        {% for choice in choices %}
            <option data-value="{{ choice.value }}">
                {{ choice.label }}
            </option>
        {% endfor %}
    <input type="hidden" name="germplasm[program]" id="germplasm_program_hidden">
    </datalist>
{% endblock %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12 col-lg-11">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
