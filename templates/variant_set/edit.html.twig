{% extends 'base.html.twig' %}

{% form_theme variantSetForm _self %}

{% block datalist_widget %}
    <input {{ block('widget_attributes') }} list="{{ form.vars.id }}_list" value="{{ form.vars.value }}" />
    <datalist id="{{ form.vars.id }}_list">
        {% for choice in choices %}
            <option data-value="{{ choice.value }}">
                {{ choice.label }}
            </option>
        {% endfor %}
	<input type="hidden" name="variant_set[marker]" id="variant_set_marker_hidden">
    </datalist>
{% endblock %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12 col-lg-11">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				<div class="card shadow mb-4">
					<!-- Card Header - Dropdown -->
					<div
						class="card-header py-3 flex-row align-items-center justify-content-between">
						<h4 class="m-0 font-weight-bold text-center tomato-color">Variant Set Edition</h4>
					</div>
					<!-- Card Body -->
					<div class="card-body">
						{{ form_start(variantSetForm) }}
						<div class="row">
							<div class="col-md-6 mb-3">
								{{ form_row
												(variantSetForm.sample,
													{ label: "Sample",
													'attr': {'placeholder': "Select the sample",
													'class': "custom-select d-block w-100"}
													}
												)
											}}
							</div>
							<div class="col-md-6 mb-3">
								{{ form_row
												(variantSetForm.marker,
													{ label: "Marker",
													'attr': {'placeholder': "Select the marker",
													'class': "custom-select d-block w-100"}
													}
												)
											}}
							</div>
						</div>
						<div class="row">
							<div class="col-md-6 mb-3">
								{{ form_row
												(variantSetForm.variantSetMetadata,
													{ label: "Variant Set Metadata",
													'attr': {'placeholder': "Select the sample",
													'class': "custom-select d-block w-100"}
													}
												)
											}}
							</div>
							<div class="col-md-6 mb-3">
								{{ form_row
												(variantSetForm.value,
													{ label: "Value",
													'attr': {'placeholder': "Enter the value"}
													}
												)
											}}
							</div>
						</div>

						<div class="row">
							{% include 'resource/btn_update.html.twig' %}
						</div>
						{{ form_end(variantSetForm) }}
					</div>
				</div>
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('assets/nl/vendor/jquery/jquery.min.js') }}"></script>
	<script src="{{ asset('assets/js/jquery-3.5.1.js') }}"></script>
	<script src="{{ asset('assets/nl/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
	<!-- Custom scripts for all pages-->
	<script src="{{ asset('assets/nl/js/sb-admin-2.min.js') }}"></script>
	<script src="{{ asset('assets/nl/js/jquery-match-height-0.7.2.min.js') }}"></script>
	<script src="{{ asset('assets/js/datalist_widget.js') }}"></script>
{% endblock %}