{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12 order-md-1">
				{% if variantSets | length > 0 %}
					<h2 class="mb-3 text-center tomato-color font-weight-bold">Variant Set List</h2>
					<div class="table-responsive">
						<table id="datatable" class="table table-hover text-nowrap" width="100%">
							<thead class="table-dark">
								<tr>
									<th scope="col">Sample</th>
									<th scope="col">Marker</th>
									<th scope="col">Value</th>
									<th scope="col">Action</th>
								</tr>
							</thead>
							<tbody>
								{% for variantSet in variantSets %}
									<tr>
										<td>
											{% if variantSet.sample %}
												<a href="{{ path('sample_details', {id: variantSet.sample.id}) }}">{{ variantSet.sample }}</a>
											{% endif %}
										</td>
										<td>
											{% if variantSet.marker %}
												<a href="{{ path('marker_details', {id: variantSet.marker.id}) }}">{{ variantSet.marker }}</a>
											{% endif %}
										</td>
										<td>
											<a href="{{ path('variant_set_details', {id: variantSet.id}) }}">{{ variantSet.value }}</a>
										</td>
										<td>
											<a href="{{ path('variant_set_details', {id: variantSet.id}) }}">
												<button class="btn btn-outline-primary">Details</button>
											</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				{% else %}
					<h5 class="mb-3 text-center tomato-color font-weight-bold">No variant set has been provided in our system</h5>
				{% endif %}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/nl/vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/nl/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

    <!-- Custom scripts for all pages-->
    <script src="{{ asset('assets/nl/js/sb-admin-2.min.js') }}"></script>

	<!-- DataTables JavaScript -->
	<script src="{{ asset('assets/datatables/js/jquery.dataTables.min.js') }}"></script>
	<script src="{{ asset('assets/datatables/js/dataTables.bootstrap4.min.js') }}"></script>
	<script src="{{ asset('assets/datatables/js/dataTables.responsive.js') }}"></script>

	<!-- Page-Level Demo Scripts - Tables - Use for reference -->
	<script src="{{ asset('assets/datatables/js/custom_page_entry_showing.js') }}">
	</script>

<!-- Page-Value Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function() {
            $('#datatable').DataTable();
        } );
    </script>
{% endblock %}