{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
		{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
			{% for message in messages %}
				<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
			{% endfor %}
		{% endfor %}
			<div class="col-md-12 order-md-1">
				{% if people | length > 0 %}
					<h2 class="mb-3 text-center tomato-color font-weight-bold">People List</h2>
					<div class="table-responsive">
						<table id="datatable" class="table table-hover text-nowrap" width="100%">
							<thead class="table-dark">
								<tr>
									<th scope="col">First Name</th>
                                    <th scope="col">Middle Name</th>
									<th scope="col">Last Name</th>
									<th scope="col">Email</th>
                                    <th scope="col">City</th>
                                    <th scope="col">Country</th>
									<th scope="col">Action</th>
								</tr>
							</thead>
							<tbody>
								{% for person in people %}
									<tr>
										<td>
											{{ person.firstName }}
										</td>
                                        <td>
											{{ person.middleName }}
										</td>
										<td>
											{{ person.lastName }}
										</td>
										<td>
											{% if person.user %}
												{{ person.user.email }}
											{% endif %}
										</td>
                                        <td>
											{{ person.city }}
										</td>
                                        <td>
											{% if person.country %}
												<a href="{{ path('person_details', {id: person.id}) }}">{{ person.country }}</a>
											{% endif %}
										</td>
										<td>
											<a href="{{ path('person_details', {id: person.id}) }}">
												<button class="btn btn-outline-primary">Details</button>
											</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				{% else %}
					<h5 class="mb-3 text-center tomato-color font-weight-bold">No person has been provided in our system</h5>
				{% endif %}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
	{% include 'resource/list_js.html.twig' %}
	
<script>
		$(document).ready(function () {
$('#datatable').DataTable();
});
	</script>
{% endblock %}
