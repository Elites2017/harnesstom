{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12 col-lg-11">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				<div class="card shadow mb-4">
					<div class="card-header py-3 flex-row align-items-center justify-content-between">
						<h4 class="m-0 font-weight-bold text-center tomato-color">Marker Synonym List</h4>
					</div>
					<div class="card-body">
						{% if markerSynonyms | length > 0 %}
							<div class="table-responsive">
								<table id="datatable" class="table table-hover text-nowrap" width="100%">
									<thead class="table-dark">
										<tr>
											<th scope="col">Name</th>
											<th scope="col">Source</th>
											<th scope="col">Synonym</th>
											<th scope="col">Action</th>
										</tr>
									</thead>
									<tbody>
									</tbody>
								</table>
							</div>
						{% else %}
							<h5 class="mb-3 text-center tomato-color font-weight-bold">No marker has been provided in our system</h5>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
    {% include 'resource/list_js.html.twig' %}

    <script>
		let data = [
                {% for markerSynonym in markerSynonyms %}
                    {
                    name: "{{ markerSynonym.markerName }}",
                    source: "{{ markerSynonym.synonymSource }}",
                    synonym: "{{ markerSynonym.markerSynonymId }}",
                    action: "<a href={{ path('marker_synonym_details', {id: markerSynonym.id}) }}><button class='btn btn-outline-primary'>Details</button></a>"
                    },
                {% endfor %}
            ];
        $(document).ready(function() {
            $('#datatable').DataTable( {
                "bDestroy": true,
                "pageLength": 25,
                data: data,
                columns: [
                    { data: 'name'},
                    { data: 'source'},
                    { data: 'synonym'},
                    { data: 'action'}
                ]
            } );
        } );
    </script>
{% endblock %}
