{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}


{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12 col-lg-11">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
                <div class="card shadow mb-4">
                    <div class="card-header py-3 flex-row align-items-center justify-content-between">
                        <h4 class="m-0 font-weight-bold text-center tomato-color">New Marker Synonym</h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(markerSynonymForm) }}
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    {{ form_row
                                                    (markerSynonymForm.markerName,
                                                        { label: "Name *",
                                                        'attr': {'placeholder': "Enter the name",'class': "custom-select d-block w-100"}
                                                        }
                                                    )
                                                }}
                                </div>
                                <div class="col-md-4 mb-3">
                                    {{ form_row
                                                    (markerSynonymForm.synonymSource,
                                                        { label: "Source",
                                                        'attr': {'placeholder': "Enter the synonym source"}
                                                        }
                                                    )
                                                }}
                                </div>
                                <div class="col-md-4 mb-3">
                                    {{ form_row
                                                    (markerSynonymForm.markerSynonymId,
                                                        { label: "Synonym name",
                                                        'attr': {'placeholder': "Enter the synonym name"}
                                                        }
                                                    )
                                                }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <button class="btn btn-outline-primary btn-lg btn-block" type="submit">Update</button>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <button class="btn btn-outline-secondary btn-lg btn-block" type="reset">Cancel</button>
                                </div>
                            </div>
                            {{ form_end(markerSynonymForm) }}
                    </div>
                </div>
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}
