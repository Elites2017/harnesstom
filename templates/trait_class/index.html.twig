{% block body %}
  <div class="container-fluid">
    <div class="row">
      <div class="col-xl-10 col-lg-11">
        <div class="card shadow mb-4">
          <!-- Card Header - Dropdown -->
          <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold tomato-color">
              Trait Type List
            </h6>
            <div class="dropdown no-arrow">
              <a class="dropdown-toggle"
                href="#"
                role="button"
                id="dropdownMenuLink"
                data-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false">
                <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
              </a>
              <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                aria-labelledby="dropdownMenuLink">
                <div class="dropdown-header">
                  Trait Type Option:
                </div>
                <a class="dropdown-item" id="optionToShow">View list</a>
              </div>
            </div>
          </div>
          <!-- Card Body -->
          <div class="card-body">
            {# <div class="treeview-animated treeView">
              {% macro treeView(traitClasses) %}
                {% import _self as macros %}
                {% for oneChild in traitClasses %}
                  <div class="card closed {{
                    oneChild.traitClasses is not empty
                      ? 'border-left-primary'
                      : 'border-left-danger'
                    }} shadow h-100 mb-3">
                    <li class="treeview-animated-items">
                      <span class="closed">
                        <i class="{{
                          oneChild.traitClasses is not empty
                            ? 'fas fa-angle-right'
                            : ''
                          }}">

                        </i>
                        <span>{{ oneChild.name }}</span>
                      </span>
                      {% if oneChild.traitClasses is not empty %}
                        <ul class="nested">
                          {{ macros.treeView(oneChild.traitClasses) }}
                        </ul>
                      {% endif %}
                    </li>
                  </div>
                {% endfor %}
              {% endmacro %}

              <ul class="treeview-animated-list">
                {{ _self.treeView(traitClasses) }}
              </ul>
            </div> #}

            <div class="listView">
              {% if (traitClasses|length) > 0 %}
                <div class="table-responsive">
                  <table id="datatable"
                    class="table table-hover text-nowrap"
                    width="100%">
                    <thead class="table-dark">
                      <tr>
                        <th scope="col">
                          Ontology ID
                        </th>
                        <th scope="col">
                          Name
                        </th>
                        <th scope="col">
                          Parent Term
                        </th>
                        <th scope="col">
                          Variable of
                        </th>
                        <th scope="col">
                          Description
                        </th>
                        <th scope="col">
                          Action
                        </th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for traitClass in traitClasses %}
                        <tr>
                          <td>
                            {{ traitClass.ontologyId }}
                          </td>
                          <td>
                            {{ traitClass.name }}
                          </td>
                          <td>
                            {% for one in traitClass.traitClasses %}
                              {{ one }} - {{ one.ontologyId }}
                            {% endfor %}
                          </td>
                          <td>
                            {% for one in traitClass.varOf %}
                              {{ one }} - {{ one.ontologyId }}
                            {% endfor %}
                          </td>
                          <td>
                            {{ traitClass.description }}
                          </td>
                          <td>
                            {# <a href="{{
                              path(
                                'trait_class_details',
                                {
                                  id: traitClass.id
                                }
                              )
                              }}"></a> #}
                            <a href="#">
                              <button class="btn btn-outline-primary">
                                Details
                              </button>
                            </a>
                          </td>
                        </tr>
                      {% endfor %}
                    </tbody>
                  </table>
                </div>
              {% else %}
                <h5 class="mb-3 text-center tomato-color font-weight-bold">
                  No trait type has been provided in our system
                </h5>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- .row -->
  </div>
  <!-- .container -->
{% endblock %}

