{% extends 'base.html.twig' %}

{% form_theme crossForm _self %}

{% block datalist_widget %}
    <input {{ block('widget_attributes') }} list="cross_study_list" value="{{ form.vars.value }}" />
    <datalist id="cross_study_list">
        {% for choice in choices %}
            <option data-value="{{ choice.value }}">
                {{ choice.label }}
            </option>
        {% endfor %}
    <input type="hidden" name="cross[study]" id="cross_study_hidden">
    </datalist>
{% endblock %}

