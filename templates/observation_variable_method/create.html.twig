{% extends 'base.html.twig' %}

{% form_theme observationVariableMethodForm _self %}

{% block datalist_widget %}
    <input {{ block('widget_attributes') }} list="observation_variable_method_methodClass_list" value="{{ form.vars.value }}" />
    <datalist id="observation_variable_method_methodClass_list">
        {% for choice in choices %}
            <option data-value="{{ choice.value }}">
                {{ choice.label }}
            </option>
        {% endfor %}
    <input type="hidden" name="observation_variable_method[methodClass]" id="observation_variable_method_methodClass_hidden">
    </datalist>
{% endblock %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12 col-lg-11">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				<div class="card shadow mb-4">
					<!-- Card Header - Dropdown -->
					<div
						class="card-header py-3 flex-row align-items-center justify-content-between">
						<h4 class="m-0 font-weight-bold text-center tomato-color">New Observation Variable Method</h4>
					</div>
					<!-- Card Body -->
					<div class="card-body">
						{{ form_start(observationVariableMethodForm) }}
						<div class="row">
							<div class="col-md-6 mb-3">
								{{ form_row
												(observationVariableMethodForm.name,
													{ label: "Name *",
													'attr': {'placeholder': "Enter the observation variable method name"}
													}
												)
											}}
							</div>

							<div class="col-md-6 mb-3">
								{{ form_row
												(observationVariableMethodForm.instrument,
													{ label: "Instrument",
													'attr': {'placeholder': "Select the observation variable method instrument"}
													}
												)
											}}
							</div>
						</div>
						<div>
							{{ form_row
												(observationVariableMethodForm.description,
													{ label: "Description",
													'attr': {'placeholder': "Enter the observation variable method description"}
													}
												)
											}}
						</div>
						<div class="row">
							<div class="col-md-4 mb-3">
								{{ form_row
												(observationVariableMethodForm.software,
													{ label: "Software",
													'attr': {'placeholder': "Enter the observation variable method software"}
													}
												)
											}}
							</div>

							
							<div class="col-md-4 mb-3">
								{{ form_row
												(observationVariableMethodForm.methodClass,
													{ label: "Method class",
													'attr': {'placeholder': "Enter the observation variable method method class",
															'class': "custom-select d-block w-100"}
													}
												)
											}}
							</div>

							<div>
								<div>
									{# the data-index attribute is required for the JavaScript code below #}
									<ul class="tags" data-index="{{ observationVariableMethodForm.publicationReference|length > 0 ? observationVariableMethodForm.publicationReference|last.vars.name + 1 : 0 }}" data-prototype="{{ form_widget(observationVariableMethodForm.publicationReference.vars.prototype)|e('html_attr') }}">
									{% for pubRef in observationVariableMethodForm.publicationReference %}
										<li>
										{{ form_errors(pubRef) }}
										{{ form_widget(pubRef) }}
										</li>
									{% endfor %}
									</ul>
								</div>
								<button type="button"
									class="btn btn-outline-info mb-3 add_item_link"
									data-collection-holder-class="tags">
									Add publication reference
								</button>
							</div>
						</div>
						<div class="row">
							{% include 'resource/btn_create.html.twig' %}
						</div>
						{{ form_end(observationVariableMethodForm) }}
					</div>
				</div>
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
    {% include 'resource/create_edit_js.html.twig' %}
{% endblock %}