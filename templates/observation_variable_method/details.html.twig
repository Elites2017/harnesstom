{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
	
		<!-- .row -->
		<div class="row">
            <div class="col-xl-12 col-lg-11 mb-3">
                <div class="row">
                    <div class="col-9">
                        <h2 class="mb-3 text-center tomato-color font-weight-bold">Observation Variable Method Details</h2>
                    </div>

                    <div class="col-3">
                        {% if is_granted("ROLE_ADMIN") %}
							<span>Created By: 
								<a href="{{ path('person_details', {id: observationVariableMethod.createdBy.id}) }}">{{ observationVariableMethod.createdBy }}</a>
							</span>
							<span>On: {{ observationVariableMethod.createdAt | date('d/m/Y h:m:s') }} </span>
							</br><a href="{{ path('observation_variable_method_delete', {id: observationVariableMethod.id}) }}" class="changeStatusLink" id="{{ observationVariableMethod.id }}">
								<span class="changeStatusSpan">
									<input type="checkbox" {{ observationVariableMethod.isActive ? ' checked=true ' : 'unchecked = true' }} data-toggle="toggle" data-onstyle="outline-success" data-offstyle="outline-danger">
								</span>
                                </a>
                        {% endif %}
                        {% if is_granted("observation_variable_method_edit", observationVariableMethod) %}
							<a href="{{ path('observation_variable_method_edit', {id: observationVariableMethod.id}) }}">
								<button class="btn btn-outline-warning">Edit</button>
							</a>
                        {% endif %}
                    </div>
				</div>
			</div>
		</div>

		{# object related row #}
		<div class="row mb-3">
			<div class="col-xl-6 col-lg-5 mb-3 mt-1">
				<div class="card">
					<div class="card-header">
						<h3 class="tomato-color">Observation Variable Method Basic Information</h3>
					</div>

					<div class="card-body">
						<div class="col-xl-12 col-lg-11 mb-1">
							<label for="validationTooltip01">Name: </label>
							<span class="tomato-color font-weight-bold">{{ observationVariableMethod.name}}</span>
						</div>

						<div class="col-xl-12 col-lg-11 mb-1">
							<label for="validationTooltip01">Description: </label>
							<span class="tomato-color font-weight-bold">{{ observationVariableMethod.description}}</span>
						</div>
					</div>

					<div class="card-footer text-muted">
					</div>
				</div>
			</div>

			<div class="col-xl-6 col-lg-5 mb-3 mt-1">
				<div class="card">
					<div class="card-header">
						<h3 class="tomato-color">Instrument, Software & Method Class</h3>
					</div>

					<div class="col-xl-12 col-lg-11 mb-1">
							<label for="validationTooltip01">Instrument: </label>
							<span class="tomato-color font-weight-bold">{{ observationVariableMethod.instrument}}</span>
						</div>

					<div class="col-xl-12 col-lg-11 mb-1">
						<label for="validationTooltip01">Software: </label>
						<span class="tomato-color font-weight-bold">{{ observationVariableMethod.software}}</span>
					</div>

					<div class="col-xl-12 col-lg-11 mb-1">
						<label for="validationTooltip01">Method Class: </label>
						{% if observationVariableMethod.methodClass %}
							<a href="{{ path('method_class_details', {id: observationVariableMethod.methodClass.id}) }}">
								<span class="tomato-color font-weight-bold">{{ observationVariableMethod.methodClass }}</span>
							</a>
						{% endif %}
					</div>

					<div class="col-xl-12 col-lg-11 mb-1">
						<label for="validationTooltip01">Publication Reference: </label></br>
						{% if observationVariableMethod.publicationReference %}
							{% for one in observationVariableMethod.publicationReference %}
								<span class="tomato-color font-weight-bold">{{ loop.index }}) {{ one }}</span> </br>
							{% endfor %}
						{% endif %}
					</div>
						
					<div class="card-footer text-muted">
					</div>
				</div>
			</div>
		</div>

		<div class="row mt-3">
			<div class="col-xl-5 col-lg-4 mr-auto">
				{# Progeny #}
				{% if observationVariableMethod.observationVariables | length > 0 %}
					<h4 class="d-flex justify-content-between align-items-center mb-3">
						<strong class="tomato-color">{{ observationVariableMethod.observationVariables | length == 1 ? 'Related Observation Variable Summary' : 'Related Observation Variables Summary' }}</strong>
						<span class="badge badge-danger badge-pill">{{ observationVariableMethod.observationVariables | length }}</span>
					</h4>

					<table id="datatable_obs_var" class="table table-hover text-nowrap">
						<thead class="table-dark">
							<tr>
								<th>Name</th>
								<th>Description</th>
								<th>Trait</th>
							</tr>
						</thead>
						<tbody>
							{% for obsVar in observationVariableMethod.observationVariables %}
								<tr>
									<td>
										<strong class="text-muted">
											<a href="{{ path('observation_variable_details', {id: obsVar.id}) }}">{{ obsVar.name }}</a>
										</strong>
									</td>

									<td>
										<strong class="text-muted">
											{{ obsVar.description }}
										</strong>
									</td>

									<td>
										{% if obsVar.trait %}
											<strong class="text-muted">
												<a href="{{ path('trait_class_details', {id: obsVar.trait.id}) }}">{{ obsVar.trait }}</a>
											</strong>
										{% endif %}
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				{% endif %}
			</div>

			<div class="col-xl-5 col-lg-4">
				{# analyte #}
				{% if observationVariableMethod.analytes | length > 0 %}
					<h4 class="d-flex justify-content-between align-items-center mb-3">
						<strong class="tomato-color">{{ observationVariableMethod.analytes | length == 1 ? 'Related Analyte Summary' : 'Related Analytes Summary' }}</strong>
						<span class="badge badge-danger badge-pill">{{ observationVariableMethod.analytes | length }}</span>
					</h4>

					<table id="datatable_analyte" class="table table-hover text-nowrap">
						<thead class="table-dark">
							<tr>
								<th>Analyte Name</th>
								<th>Analyte  Code</th>
								<th>Retention Time</th>
							</tr>
						</thead>
						<tbody>
							{% for analyte in observationVariableMethod.analytes %}
								<tr>
									<td>
										<strong class="text-muted">
											<a href="{{ path('analyte_details', {id: analyte.id}) }}">{{ analyte.name }}</a>
										</strong>
									</td>

									<td>
										<strong class="text-muted">
											{{ analyte.analyteCode }}
										</strong>
									</td>

									<td>
										<strong class="text-muted">
											{{ analyte.retentionTime }}
										</strong>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				{% endif %}
			</div>
			
		</div>

	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
    {% include 'resource/details_js.html.twig' %}
    <script>
        $(document).ready(function() {
            $('#datatable_obs_var, #datatable_analyte').DataTable();
        } );
    </script>
{% endblock %}
