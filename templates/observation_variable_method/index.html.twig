{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12 order-md-1">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				{% if observationVariableMethods | length > 0 %}
					<h2 class="mb-3 text-center tomato-color font-weight-bold">Observation Variable Method List</h2>
					<div class="table-responsive">
						<table id="datatable" class="table table-hover text-nowrap" width="100%">
							<thead class="table-dark">
								<tr>
									<th scope="col">Name</th>
									<th scope="col">Description</th>
									<th scope="col">Instrument</th>
									<th scope="col">Software</th>
									<th scope="col">Method Class</th>
									<th scope="col">Action</th>
								</tr>
							</thead>
							<tbody>
								{% for observationVariableMethod in observationVariableMethods %}
									<tr>
										<td>
											{{ observationVariableMethod.name }}
										</td>
										<td>
											{{ observationVariableMethod.description }}
										</td>
										<td>
											{{ observationVariableMethod.instrument }}
										</td>
										<td>
											{% if observationVariableMethod.software %}
												<a href="{{ path('software_details', {id: observationVariableMethod.id}) }}">{{ observationVariableMethod.software }}</a>
											{% endif %}
										</td>
										<td>
											{% if observationVariableMethod.methodClass %}
												<a href="{{ path('method_class_details', {id: observationVariableMethod.id}) }}">{{ observationVariableMethod.methodClass }}</a>
											{% endif %}
										</td>
										<td>
											<a href="{{ path('observation_variable_method_details', {id: observationVariableMethod.id}) }}">
												<button class="btn btn-outline-primary">Details</button>
											</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				{% else %}
					<h5 class="mb-3 text-center tomato-color font-weight-bold">No observation variable method has been provided in our system</h5>
				{% endif %}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
	{% include 'resource/list_js.html.twig' %}
	
<script>
		$(document).ready(function () {
$('#datatable').DataTable();
});
	</script>
{% endblock %}
