{% extends 'base.html.twig' %}

{% form_theme collectingMissionForm _self %}

{% block datalist_widget %}
    <input {{ block('widget_attributes') }} list="collecting_mission_institute_list" value="{{ form.vars.value }}" />
    <datalist id="collecting_mission_institute_list">
        {% for choice in choices %}
            <option data-value="{{ choice.value }}">
                {{ choice.label }}
            </option>
        {% endfor %}
    <input type="hidden" name="collecting_mission[institute]" id="collecting_mission_institute_hidden">
    </datalist>
{% endblock %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12 col-lg-11">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				<div class="card shadow mb-4">
					<!-- Card Header - Dropdown -->
					<div
						class="card-header py-3 flex-row align-items-center justify-content-between">
						<h4 class="m-0 font-weight-bold text-center tomato-color">Collecting Mission Edition</h4>
					</div>
					<!-- Card Body -->
					<div class="card-body">
						{{ form_start(collectingMissionForm) }}
						<div class="row">
							<div class="col-md-4 mb-3">
								{{ form_row
												(collectingMissionForm.name,
													{ label: "Name *",
													'attr': {'placeholder': "Enter the name of the mission"}
													}
												)
											}}
							</div>

							<div class="col-md-4 mb-3">
								{{ form_row
												(collectingMissionForm.species,
													{ label: "Species",
													'attr': {'placeholder': "Enter the name of the species"}
													}
												)
											}}
							</div>

							<div class="col-md-4 mb-3">
								{{ form_row
												(collectingMissionForm.institute,
													{ label: "Institute",
													'attr': {'placeholder': "Select the institute",
															'class': "custom-select d-block w-100"}
													}
												)
											}}
							</div>
						</div>

						<div class="row">
							{% include 'resource/btn_update.html.twig' %}
						</div>
						{{ form_end(collectingMissionForm) }}
					</div>
				</div>
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
    {% include 'resource/create_edit_js.html.twig' %}
{% endblock %}