{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
		{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
			{% for message in messages %}
				<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
			{% endfor %}
		{% endfor %}
			<div class="col-md-12 order-md-1">
				{% if collectingMissions | length > 0 %}
					<h2 class="mb-3 text-center tomato-color font-weight-bold">Collecting Mission List</h2>
					<div class="table-responsive">
						<table id="datatable" class="table table-hover text-nowrap" width="100%">
							<thead class="table-dark">
								<tr>
									<th scope="col">Name</th>
									<th scope="col">Species</th>
									<th scope="col">Institue</th>
                                    <th scope="col">Action</th>
								</tr>
							</thead>
							<tbody>
							</tbody>
						</table>
					</div>
				{% else %}
					<h5 class="mb-3 text-center tomato-color font-weight-bold">No collecting mission has been provided in our system</h5>
				{% endif %}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
	{% include 'resource/list_js.html.twig' %}

	<script>
		let dataTableId = "#datatable";
		let linkId = "";
		let linkInstcode = "";
		let linkInstAcro = "";
		let colsDef = [
				// These are the column name variables that will be sent to the server
				{ "data": "coll_name", "targets": 0 },
				{ "data": "species", "targets": 1 },
				{# {
				"data": "instcode", "targets": 3,
					"render": function(data, type, row, meta) {
						linkInstcode = data;
						return null;
					}
				},
				{
				"data": "inst_acronym", "targets": 3,
					"render": function(data, type, row, meta) {
						linkInstAcro = data;
						return null;
					}
				},
				{
				"data": "inst_id", "targets": 3,
					"render": function(data, type, row, meta) {
						linkId = data;
						return null;
					}
				}, #}
				{
				"data": "instcode", "targets": 4,
					"render": function(data, type, row, meta) {
						if (data) {
							let url = '{{ path("institute_details", {'id': 'dataId'}) }}'; 
							url = url.replace("dataId", linkId);
							let actionlink = "<a href="+ url +">"+data+"</a>";
							return actionlink;
						} else {
							return null;
						}
					}
				},
				{
				"data": "id", "targets": 5,
					"render": function(data, type, row, meta) {
						let url = '{{ path("collecting_mission_details", {'id': 'dataId'}) }}'; 
						url = url.replace("dataId", data);
						let actionlink = "<a href="+ url +"><button class='btn btn-outline-primary'>Details</button></a>";
						return actionlink;
					}
				}
			];
		let url = "{{ path('collecting_mission_datatable') }}";
		// call the function with data table id, columns & ajax url args
		dataTable(dataTableId, colsDef, url);
    </script>
{% endblock %}
