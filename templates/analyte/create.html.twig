{% extends 'base.html.twig' %}

{% form_theme analyteForm _self %}

{% block datalist_widget %}
    <input {{ block('widget_attributes') }} list="analyte_annotationLevel_list" value="{{ form.vars.value }}" />
    <datalist id="analyte_annotationLevel_list">
        {% for choice in choices %}
            <option data-value="{{ choice.value }}">
                {{ choice.label }}
            </option>
        {% endfor %}
    <input type="hidden" name="analyte[annotationLevel]" id="analyte_annotationLevel_hidden">
    </datalist>
{% endblock %}

