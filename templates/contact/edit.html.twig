{% extends 'base.html.twig' %}

{% form_theme contactForm _self %}

{% block datalist_widget %}
    <input {{ block('widget_attributes') }} list="contact_institute_list" value="{{ form.vars.value }}" />
    <datalist id="contact_institute_list">
        {% for choice in choices %}
            <option data-value="{{ choice.value }}">
                {{ choice.label }}
            </option>
        {% endfor %}
    <input type="hidden" name="contact[institute]" id="contact_institute_hidden">
    </datalist>
{% endblock %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12 col-lg-11">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				<div class="card shadow mb-4">
					<!-- Card Header - Dropdown -->
					<div
						class="card-header py-3 flex-row align-items-center justify-content-between">
						<h4 class="m-0 font-weight-bold text-center tomato-color">Contact Edition</h4>
					</div>
					<!-- Card Body -->
					<div class="card-body">
						{{ form_start(contactForm) }}
						<div class="row">
							<div class="col-md-6 mb-3">
								{{ form_row
												(contactForm.orcid,
													{ label: "ORCID *",
													'attr': {'placeholder': "Enter the contact orcid"}
													}
												)
											}}
							</div>

							<div class="col-md-6 mb-3">
								{{ form_row
												(contactForm.person,
													{ label: "Email of the contact",
													'attr': {'placeholder': "Select the contact's name",
													'class': "custom-select d-block w-100"}
													}
												)
											}}
							</div>
						</div>

						<div class="row">
							<div class="col-md-6 mb-3">
								{{ form_row
												(contactForm.institute,
													{ label: "Institute of the contact",
													'attr': {'placeholder': "Select the contact's institute",
													'class': "custom-select d-block w-100"}
													}
												)
											}}
							</div>

							<div class="col-md-6 mb-3">
								{{ form_row
												(contactForm.type,
													{ label: "Type",
													'attr': {'placeholder': "Select the contact type",
													'class': "custom-select d-block w-100"}
													}
												)
											}}
							</div>
						</div>

						<div class="row">
							{% include 'resource/btn_update.html.twig' %}
						</div>
						{{ form_end(contactForm) }}
					</div>
				</div>
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
    {% include 'resource/create_edit_js.html.twig' %}
{% endblock %}