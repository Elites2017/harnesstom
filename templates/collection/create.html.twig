{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12 col-lg-11">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				<div class="card shadow mb-4">
					<!-- Card Header - Dropdown -->
					<div
						class="card-header py-3 flex-row align-items-center justify-content-between">
						<h4 class="m-0 font-weight-bold text-center tomato-color">New Collection</h4>
					</div>
					<!-- Card Body -->
					<div class="card-body">
						{{ form_start(collectionForm) }}
						<div class="row">
							<div class="col-md-4 mb-3">
								{{ form_row(collectionForm.name, {'attr': {'placeholder': "Enter the collection name" }}) }}
							</div>

							
							<div>
								{{ form_row
									(collectionForm.germplasm,
										{ label: "Germplasms (You can select several germplasms)",
										'attr': {'placeholder': "Select the related germplasm(s)"}
										}
									)
								}}
							</div>
						</div>
						<div>
							{{ form_row(collectionForm.description, {'attr': {'placeholder': "Enter the collection description" }}) }}
						</div>

						<div>
							<div>
								{# the data-index attribute is required for the JavaScript code below #}
								<ul class="tags" data-index="{{ collectionForm.publicationReference|length > 0 ? collectionForm.publicationReference|last.vars.name + 1 : 0 }}" data-prototype="{{ form_widget(collectionForm.publicationReference.vars.prototype)|e('html_attr') }}">
								{% for pubRef in collectionForm.publicationReference %}
									<li>
									{{ form_errors(pubRef) }}
									{{ form_widget(pubRef) }}
									</li>
								{% endfor %}
								</ul>
							</div>
							<button type="button"
								class="btn btn-outline-info mb-3 add_item_link"
								data-collection-holder-class="tags">
								Add publication reference
							</button>
						</div>

						<div class="row">
							{% include 'resource/btn_create.html.twig' %}
						</div>
						{{ form_end(collectionForm) }}
					</div>
				</div>
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
    {% include 'resource/create_edit_js.html.twig' %}
{% endblock %}