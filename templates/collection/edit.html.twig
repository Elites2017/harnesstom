{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-12 order-md-1">
				<h2 class="mb-3 text-center tomato-color font-weight-bold">Collection Edition</h2>
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				{{ form_start(collectionForm) }}
				<div class="row">
					<div class="col-md-4 mb-3">
						{{ form_row(collectionForm.name, {'attr': {'placeholder': "Enter the collection name" }}) }}
					</div>

					<div class="col-md-4 mb-3">
						{{ form_row(collectionForm.publicationReference, {'attr': {'placeholder': "Enter the collection publication reference" }}) }}
					</div>

					<div>
                        {{ form_row
                            (collectionForm.germplasm,
                                { label: "Germplasms (You can select several germplasms)",
                                'attr': {'placeholder': "Select the related germplasm(s)"}
                                }
                            )
                        }}
                    </div>
				</div>
				<div>
						{{ form_row(collectionForm.description, {'attr': {'placeholder': "Enter the collection description" }}) }}
					</div>

				<div class="row">
					<div class="col-md-6 mb-3">
						<button class="btn btn-outline-primary btn-lg btn-block" type="submit">Update</button>
					</div>

					<div class="col-md-6 mb-3">
						<button class="btn btn-outline-secondary btn-lg btn-block" type="reset">Cancel</button>
					</div>
				</div>
				{{ form_end(collectionForm) }}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}