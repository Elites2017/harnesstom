{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-12 order-md-1">
				<h2 class="mb-3 text-center tomato-color font-weight-bold">New Attribute Category</h2>
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				{{ form_start(attributeCategoryForm) }}
				<div class="row">
					<div class="col-md-4 mb-3">
						{{ form_row(attributeCategoryForm.ontology_id, {'attr': {'placeholder' : 'Enter the ontology id'}}) }}
					</div>

					<div class="col-md-4 mb-3">
						{{ form_row(attributeCategoryForm.parentTerm, {'attr': {'placeholder' : 'Enter the parent term', 'class': "custom-select d-block w-100"}}) }}
					</div>

					<div class="col-md-4 mb-3">
						{{ form_row(attributeCategoryForm.name, {'attr': {'placeholder' : 'Enter the attribute category name'}}) }}
					</div>
				</div>
				<div>
					{{ form_row(attributeCategoryForm.description, {'attr': {'placeholder' : 'Enter the attribute category description'}}) }}
				</div>
				<div class="row">
					<div class="col-md-6 mb-3">
						<button class="btn btn-outline-primary btn-lg btn-block" type="submit">Create</button>
					</div>

					<div class="col-md-6 mb-3">
						<button class="btn btn-outline-secondary btn-lg btn-block" type="reset">Cancel</button>
					</div>
				</div>
				{{ form_end(attributeCategoryForm) }}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}