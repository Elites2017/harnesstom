{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <main class="main-content">
        <div class="fullwidth-block">
		</div> <!-- .fullwidth-block -->

        <div class="fullwidth-block">
            <div class="container">
                <div class="row">
                        <div class="card-body">
                            <h1 class="tomato-color">Attribute Category</h1>
                            {{ form_start(attributeCategoryForm) }}
                                <div class="form-group">
                                    {{ form_row(attributeCategoryForm.abbreviation, {'attr': {'placeholder' : 'Enter the abbreviation'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(attributeCategoryForm.name, {'attr': {'placeholder' : 'Enter the name'}}) }} 
                                </div>
                                <div class="form-group">
                                    {{ form_row(attributeCategoryForm.description, {'attr': {'placeholder' : 'Enter the description'}}) }} 
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-outline-primary">Create</button>
                                    <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                                </div>
                            {{ form_end(attributeCategoryForm) }}
                        </div>
                    </div>
                    </div>
                </div> <!-- .row -->
            </div> <!-- .container -->
        </div> <!-- .fullwidth-block -->
    </main> <!-- .main-content -->
{% endblock %}
