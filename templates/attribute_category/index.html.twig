{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12 order-md-1">
				{% if attributeCategories | length > 0 %}
					<h2 class="mb-3 text-center tomato-color font-weight-bold">Attribute Category List</h2>
					{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
						{% for message in messages %}
							<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
								<button type="button" class="close" data-dismiss="alert" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
						{% endfor %}
					{% endfor %}
					<div class="table-responsive">
						<table id="datatable" class="table table-hover text-nowrap" width="100%">
							<thead class="table-dark">
								<tr>
									<th scope="col">Ontology ID</th>
									<th scope="col">Name</th>
									<th scope="col">Description</th>
									<th scope="col">Parent</th>
									<th scope="col">Action</th>
								</tr>
							</thead>
							<tbody>
								{% for attributeCategory in attributeCategories %}
									<tr>
										<td>
											{{ attributeCategory.ontologyId }}
										</td>
										<td>
											{{ attributeCategory.name }}
										</td>
										<td>
											{{ attributeCategory.description }}
										</td>
										<td>
											{{ attributeCategory.parentTerm }}
										</td>
										<td>
											<a href="{{ path('attribute_category_details', {id: attributeCategory.id}) }}">
												<button class="btn btn-outline-primary">Details</button>
											</a>
										</td>
									</tr>
								{% endfor %}

							</tbody>
						</table>
					</div>
				{% else %}
					<h5 class="mb-3 text-center tomato-color font-weight-bold">No attribute category has been provided in our system</h5>
				{% endif %}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
	{% include 'resource/list_js.html.twig' %}
	
	<script src="{{ asset('assets/js/show_hide_panels.js') }}"></script>
	<script src="{{ asset('assets/treeview/js/mdbootstrap_treeview.js') }}"></script>
	
    <script>
		// Treeview Initialization
		$(document).ready(function() {
			$('.treeview-colorful').mdbTreeview();
			$('.treeview-animated').mdbTreeview();
			$('.treeview').mdbTreeview();
		});
	</script>

	<script>
		$(document).ready(function () {
			$('#datatable').DataTable();
		});
	</script>
{% endblock %}
