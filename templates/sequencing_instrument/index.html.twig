{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12 order-md-1">
				{% if sequencingInstruments | length > 0 %}
					<h2 class="mb-3 text-center tomato-color font-weight-bold">Sequencing Instrument List</h2>
					{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
						{% for message in messages %}
							<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
								<button type="button" class="close" data-dismiss="alert" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
						{% endfor %}
					{% endfor %}
					<div class="table-responsive">
						<table id="datatable" class="table table-hover text-nowrap" width="100%">
							<thead class="table-dark">
								<tr>
									<th scope="col">Ontology ID</th>
									<th scope="col">Name</th>
									<th scope="col">Description</th>
									<th scope="col">Parent</th>
									<th scope="col">Action</th>
								</tr>
							</thead>
							<tbody>
								{% for sequencingInstrument in sequencingInstruments %}
									<tr>
										<td>
											{{ sequencingInstrument.ontologyId }}
										</td>
										<td>
											{{ sequencingInstrument.name }}
										</td>
										<td>
											{{ sequencingInstrument.description }}
										</td>
										<td>
											{{ sequencingInstrument.parentTerm }}
										</td>
										<td>
											<a href="{{ path('sequencing_instrument_details', {id: sequencingInstrument.id}) }}">
												<button class="btn btn-outline-primary">Details</button>
											</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				{% else %}
					<h5 class="mb-3 text-center tomato-color font-weight-bold">No sequencing instrument has been provided in our system</h5>
				{% endif %}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('assets/nl/vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/nl/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

    <!-- Custom scripts for all pages-->
    <script src="{{ asset('assets/nl/js/sb-admin-2.min.js') }}"></script>

	
	<!-- Page-Level Demo Scripts - Tables - Use for reference -->
	<script src="{{ asset('assets/datatables/js/custom_page_entry_showing.js') }}">
	</script>
	
	<script src="{{ asset('assets/js/show_hide_panels.js') }}"></script>
	<script src="{{ asset('assets/treeview/js/mdbootstrap_treeview.js') }}"></script>
	
    <script>
		// Treeview Initialization
		$(document).ready(function() {
			$('.treeview-colorful').mdbTreeview();
			$('.treeview-animated').mdbTreeview();
			$('.treeview').mdbTreeview();
		});
	</script>
	<!-- DataTables JavaScript -->
	<script src="{{ asset('assets/datatables/js/jquery.dataTables.min.js') }}"></script>
	<script src="{{ asset('assets/datatables/js/dataTables.bootstrap4.min.js') }}"></script>
	<script src="{{ asset('assets/datatables/js/dataTables.responsive.js') }}"></script>

	<script>
		$(document).ready(function () {
			$('#datatable').DataTable();
		});
	</script>
{% endblock %}
