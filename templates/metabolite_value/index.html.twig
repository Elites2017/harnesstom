{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12 order-md-1">
				{% if metaboliteValues | length > 0 %}
					<h2 class="mb-3 text-center tomato-color font-weight-bold">Metabolite Value List</h2>
					<div class="table-responsive">
						<table id="datatable" class="table table-hover text-nowrap" width="100%">
							<thead class="table-dark">
								<tr>
									<th scope="col">Sample</th>
									<th scope="col">Metabolite</th>
									<th scope="col">Value</th>
									<th scope="col">Action</th>
								</tr>
							</thead>
							<tbody>
								{% for metaboliteValue in metaboliteValues %}
									<tr>
										<td>
											{% if metaboliteValue.sample %}
												<a href="{{ path('metabolite_value_details', {id: metaboliteValue.id}) }}">{{ metaboliteValue.sample }}</a>
											{% endif %}
										</td>
										<td>
											{% if metaboliteValue.metabolite %}
												<a href="{{ path('metabolite_value_details', {id: metaboliteValue.id}) }}">{{ metaboliteValue.metabolite }}</a>
											{% endif %}
										</td>
										<td>
											<a href="{{ path('metabolite_value_details', {id: metaboliteValue.id}) }}">{{ metaboliteValue.value }}</a>
										</td>
										<td>
											<a href="{{ path('metabolite_value_details', {id: metaboliteValue.id}) }}">
												<button class="btn btn-outline-primary">Details</button>
											</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				{% else %}
					<h5 class="mb-3 text-center tomato-color font-weight-bold">No metabolite value entity has been provided in our system</h5>
				{% endif %}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
    {% include 'resource/list_js.html.twig' %}

<!-- Page-Value Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function() {
            $('#datatable').DataTable();
        } );
    </script>
{% endblock %}