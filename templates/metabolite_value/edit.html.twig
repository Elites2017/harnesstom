{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12 col-lg-11">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				<div class="card shadow mb-4">
					<!-- Card Header - Dropdown -->
					<div
						class="card-header py-3 flex-row align-items-center justify-content-between">
						<h4 class="m-0 font-weight-bold text-center tomato-color">Metabolite Value Edition</h4>
					</div>
					<!-- Card Body -->
					<div class="card-body">
						{{ form_start(metaboliteValueForm) }}
						<div class="row">
							<div class="col-md-4 mb-3">
								{{ form_row
												(metaboliteValueForm.sample,
													{ label: "Sample",
													'attr': {'placeholder': "Select the sample",
													'class': "custom-select d-block w-100"}
													}
												)
											}}
							</div>
							<div class="col-md-4 mb-3">
								{{ form_row
												(metaboliteValueForm.metabolite,
													{ label: "Metabolite",
													'attr': {'placeholder': "Select the metabolite",
													'class': "custom-select d-block w-100"}
													}
												)
											}}
							</div>
							<div class="col-md-4 mb-3">
								{{ form_row
												(metaboliteValueForm.value,
													{ label: "Value",
													'attr': {'placeholder': "Enter the value"}
													}
												)
											}}
							</div>
						</div>

						<div class="row">
							{% include 'resource/btn_update.html.twig' %}
						</div>
						{{ form_end(metaboliteValueForm) }}
					</div>
				</div>
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}
