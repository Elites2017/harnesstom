{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12 order-md-1">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				{% if samples | length > 0 %}
					<h6 class="m-0 font-weight-bold tomato-color">Sample List</br>
						<small>Private data are not shown unless they are shared with you.</small>
					</h6>
					<div class="table-responsive">
						<table id="datatable" class="table table-hover text-nowrap" width="100%">
							<thead class="table-dark">
								<tr>
									<th scope="col">Name</th>
									<th scope="col" data-orderable="false"></th>
                                    <th scope="col">Germplasm</th>
									<th scope="col" data-orderable="false"></th>
									<th scope="col">Study</th>
									<th scope="col" data-orderable="false"></th>
                                    <th scope="col">Developmental Stage</th>
									<th scope="col" data-orderable="false"></th>
                                    <th scope="col">Anatomical Entity</th>
									<th scope="col" data-orderable="false">Action</th>
								</tr>
							</thead>
							<tbody>
							</tbody>
						</table>
					</div>
				{% else %}
					<h5 class="mb-3 text-center tomato-color font-weight-bold">No sample has been provided in our system</h5>
				{% endif %}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
	{% include 'resource/list_js.html.twig' %}
	
	<script>
		let dataTableId = "#datatable";
		let linkGermId = "";
		let linkStId = "";
        let linkDsId = "";
		let linkAeId = "";
		let colsDef = [
				// These are the column name variables that will be sent to the server
				{ "data": "spl_name", "targets": 0 },
				{
				"data": "germ_id", "targets": 1,
					"render": function(data, type, row, meta) {
						linkGermId = data;
						return null;
					}
				},
				{
				"data": "germplasmID", "targets": 2,
					"render": function(data, type, row, meta) {
						if (data) {
							let url = '{{ path("germplasm_details", {'id': 'dataId'}) }}'; 
							url = url.replace("dataId", linkGermId);
							let actionlink = "<a href="+ url +">"+data+"</a>";
							return actionlink;
						}
						else {
							return null;
						}
					}
				},
				{
				"data": "st_id", "targets": 3,
					"render": function(data, type, row, meta) {
						linkStId = data;
						return null;
					}
				},
				{
				"data": "st_abbreviation", "targets": 4,
					"render": function(data, type, row, meta) {
						if (data) {
							let url = '{{ path("study_details", {'id': 'dataId'}) }}'; 
							url = url.replace("dataId", linkStId);
							let actionlink = "<a href="+ url +">"+data+"</a>";
							return actionlink;
						} else {
							return null;
						}
					}
				},
				{
				"data": "ds_id", "targets": 5,
					"render": function(data, type, row, meta) {
						linkDsId = data;
						return null;
					}
				},
				{
				"data": "ds_name", "targets": 6,
					"render": function(data, type, row, meta) {
						if  (data) {
							let url = '{{ path("developmental_stage_details", {'id': 'dataId'}) }}'; 
							url = url.replace("dataId", linkDsId);
							let actionlink = "<a href="+ url +">"+data+"</a>";
							return actionlink;
						}
						else {
							return null;
						}
					}
				},
				{
				"data": "ae_id", "targets": 7,
					"render": function(data, type, row, meta) {
						linkAeId = data;
						return null;
					}
				},
				{
				"data": "ae_name", "targets": 8,
					"render": function(data, type, row, meta) {
						if  (data) {
							let url = '{{ path("anatomical_entity_details", {'id': 'dataId'}) }}'; 
							url = url.replace("dataId", linkAeId);
							let actionlink = "<a href="+ url +">"+data+"</a>";
							return actionlink;
						}
						else {
							return null;
						}
					}
				},
				{
				"data": "id", "targets": 9,
					"render": function(data, type, row, meta) {
						let url = '{{ path("sample_details", {'id': 'dataId'}) }}'; 
						url = url.replace("dataId", data);
						let actionlink = "<a href="+ url +"><button class='btn btn-outline-primary'>Details</button></a>";
						return actionlink;
					}
				}
			];
		let url = "{{ path('sample_datatable') }}";
		// call the function with data table id, columns & ajax url args
		dataTable(dataTableId, colsDef, url);
    </script>
{% endblock %}
