{% extends 'base.html.twig' %}

{% form_theme sampleForm _self %}

{% block datalist_widget %}
    <input {{ block('widget_attributes') }} list="sample_study_list" value="{{ form.vars.value }}" />
    <datalist id="sample_study_list">
        {% for choice in choices %}
            <option data-value="{{ choice.value }}">
                {{ choice.label }}
            </option>
        {% endfor %}
    <input type="hidden" name="sample[study]" id="sample_study_hidden">
    </datalist>
{% endblock %}

