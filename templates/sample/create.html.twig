{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12 col-lg-11">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				<div class="card shadow mb-4">
					<!-- Card Header - Dropdown -->
					<div
						class="card-header py-3 flex-row align-items-center justify-content-between">
						<h4 class="m-0 font-weight-bold text-center tomato-color">New Sample</h4>
					</div>
					<!-- Card Body -->
					<div class="card-body">
						{{ form_start(sampleForm) }}
							<div class="row">
								<div class="col-md-6 mb-3">
									{{ form_row(sampleForm.name, {label: "Name", 'attr': {'placeholder' : 'Enter the name'}}) }}
								</div>

								<div class="col-md-6 mb-3">
									{{ form_row(sampleForm.replicate, {label: "Replicate", 'attr': {'placeholder' : 'Enter the replicate'}}) }}
								</div>
							</div>
							<div>
								{{ form_row(sampleForm.description, {label: "Description", 'attr': {'placeholder' : 'Enter the description'}}) }}
							</div>
							<div class="row">
								<div class="col-md-6 mb-3">
									{{ form_row(sampleForm.study, {label: "Study", 'attr': {'placeholder' : 'Select the study',
													'class': "custom-select d-block w-100"}}) }}
								</div>

								<div class="col-md-6 mb-3">
									{{ form_row(sampleForm.germplasm, {label: "Germplasm", 'attr': {'placeholder' : 'Select the germplasm',
													'class': "custom-select d-block w-100"}}) }}
								</div>
							</div>
							<div class="row">
								<div class="col-md-4 mb-3">
									{{ form_row(sampleForm.anatomicalEntity, {label: "Anatomical Entity", 'attr': {'placeholder' : 'Select the anatomical entity',
													'class': "custom-select d-block w-100"}}) }}
								</div>

								<div class="col-md-4 mb-3">
									{{ form_row(sampleForm.developmentalStage, {label: "Developmental Stage", 'attr': {'placeholder' : 'Select the developmental stage',
													'class': "custom-select d-block w-100"}}) }}
								</div>
								<div class="col-md-4 mb-3">
									{{ form_row(sampleForm.observationLevel, {label: "Observation Level", 'attr': {'placeholder' : 'Select the observation level',
													'class': "custom-select d-block w-100"}}) }}
								</div>
							</div>
							<div class="row">
								{% include 'resource/btn_create.html.twig' %}
							</div>
							{{ form_end(sampleForm) }}
					</div>
				</div>
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}
