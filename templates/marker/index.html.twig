{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12 order-md-1">
				{% if markers | length > 0 %}
					<h2 class="mb-3 text-center tomato-color font-weight-bold">Marker List</h2>
					{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
						{% for message in messages %}
							<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
								<button type="button" class="close" data-dismiss="alert" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
						{% endfor %}
					{% endfor %}
					<div class="table-responsive">
						<table id="datatable" class="table table-hover text-nowrap" width="100%">
							<tfoot>
								<tr>
									<th scope="col">Name</th>
									<th scope="col">Type</th>
									<th scope="col">Linkage G. Name</th>
									<th scope="col">Position</th>
									<th scope="col">Start</th>
									<th scope="col">End</th>
									<th scope="col">Ref Allele</th>
									<th scope="col">Genotyping Platform</th>
								</tr>
							</tfoot>

							<thead class="table-dark">
								<tr>
									<th scope="col">Name</th>
									<th scope="col">Type</th>
									<th scope="col">Linkage G. Name</th>
									<th scope="col">Position</th>
									<th scope="col">Start</th>
									<th scope="col">End</th>
									<th scope="col">Ref Allele</th>
									<th scope="col">Genotyping Platform</th>
									<th scope="col">Action</th>
								</tr>
							</thead>
							<tbody>
							</tbody>
						</table>
					</div>
				{% else %}
					<h5 class="mb-3 text-center tomato-color font-weight-bold">No marker has been provided in our system</h5>
				{% endif %}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/nl/vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/nl/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

    <!-- Custom scripts for all pages-->
    <script src="{{ asset('assets/nl/js/sb-admin-2.min.js') }}"></script>

	<!-- DataTables animate JavaScript -->
	<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
	<!-- DataTables JavaScript -->
	<script src="{{ asset('assets/datatables/js/dataTables.bootstrap4.min.js') }}"></script>
	<script src="{{ asset('assets/datatables/js/dataTables.responsive.js') }}"></script>
	
	<!-- Page-Level Demo Scripts - Tables - Use for reference -->
	<script src="{{ asset('assets/datatables/js/custom_page_entry_showing.js') }}">
	</script>

    <script>
		let colsDef = [
			{"data": "name"},
			{"data": "type"},
			{"data": "linkageGroupName"},
			{"data": "position"},
			{"data": "start"},
			{"data": "end"},
			{"data": "refAllele"},
			{"data": "platformNameBuffer"},
			{
				"data": "id",
				"render": function(data, type, row, meta) {
					let url = '{{ path("marker_details", {'id': 'dataId'}) }}'; 
					url = url.replace("dataId", data);
					let actionlink = "<a href="+ url +"><button class='btn btn-outline-primary'>Details</button></a>";
					return actionlink;
				}
			},
		];

		// Add a text input to each footer cell
		var pos = 1;
		$('#datatable tfoot th').each( function () {
			var title = $(this).text();
			$(this).html( "<input id='input" + pos + "' type='text' class='form-control' placeholder='& #xf002;' style='font-family:Arial, FontAwesome; width:100%'/>" );

			pos ++;
		});

		var table = $('#datatable').DataTable({
			"columnDefs": [
			
				// These are the column name variables that will be sent to the server
				{ "name": "name",   "targets": 0 },
				{ "name": "type",   "targets": 1 },
				{ "name": "linkageGroupName",  "targets": 2 },
				{ "name": "position",  "targets": 3 },
				{ "name": "start",  "targets": 4 },
				{ "name": "end",  "targets": 5 },
				{ "name": "refAllele",  "targets": 6 },
				{ "name": "platformNameBuffer",  "targets": 7 },
				{
				"name": "id", "targets": 8,
					"render": function(data, type, row, meta) {
						let url = '{{ path("marker_details", {'id': 'dataId'}) }}'; 
						url = url.replace("dataId", data);
						let actionlink = "<a href="+ url +"><button class='btn btn-outline-primary'>Details</button></a>";
						return actionlink;
					}
				}
			
			],
			// Server-side parameters
			"processing": true,
			"serverSide": true,
			// Ajax call
			"ajax": {
				"url": "{{ path('marker_datatable') }}",
				"type": "POST"
			},
			// Classic DataTables parameters
			"paging" : true,
			"info" : true, 
			"searching": true,
			"pageLength": 25,
			"order": [[2, 'asc']]
		});

		// Apply the search
		pos = 1;
		table.columns().every( function () {
			var that = this;
		
			$("#input"+pos).on( 'keyup change', function () {
				if ( that.search() !== this.value )
				{
					that
						.search( this.value )
						.draw();
				}
			});
			pos++;
		});

