{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12 order-md-1">
				{% if markerTotalRows != 0 %}
					<h2 class="mb-3 text-center tomato-color font-weight-bold">Marker List</h2>
					{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
						{% for message in messages %}
							<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
								<button type="button" class="close" data-dismiss="alert" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
						{% endfor %}
					{% endfor %}
					<div class="table-responsive">
						<table id="datatable" class="table table-hover text-nowrap" width="100%">
							<thead class="table-dark">
								<tr>
									<th scope="col">Name</th>
									<th scope="col">Type</th>
									<th scope="col">Linkage G. Name</th>
									<th scope="col">Position</th>
									<th scope="col">Start</th>
									<th scope="col">End</th>
									<th scope="col">Ref Allele</th>
									<th scope="col">Genotyping Platform</th>
									<th scope="col">Action</th>
								</tr>
							</thead>
							<tbody>
							</tbody>
						</table>
					</div>
				{% else %}
					<h5 class="mb-3 text-center tomato-color font-weight-bold">No marker has been provided in our system</h5>
				{% endif %}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
	{% include 'resource/list_js.html.twig' %}
    <script>
		let dataTableId = "#datatable";
		let colsDef = [
				// These are the column name variables that will be sent to the server
				{ "data": "name", "targets": 0 },
				{ "data": "type", "targets": 1 },
				{ "data": "linkageGroupName", "targets": 2 },
				{ "data": "position", "targets": 3 },
				{ "data": "start", "targets": 4 },
				{ "data": "end", "targets": 5 },
				{ "data": "refAllele", "targets": 6 },
				{ "data": "platformNameBuffer", "targets": 7 },
				{
				"data": "id", "targets": 8,
					"render": function(data, type, row, meta) {
						let url = '{{ path("marker_details", {'id': 'dataId'}) }}'; 
						url = url.replace("dataId", data);
						let actionlink = "<a href="+ url +"><button class='btn btn-outline-primary'>Details</button></a>";
						return actionlink;
					}
				}
			];
		let url = "{{ path('marker_datatable') }}";
		// call the function with data table id, columns & ajax url args
		dataTable(dataTableId, colsDef, url);
    </script>
{% endblock %}
