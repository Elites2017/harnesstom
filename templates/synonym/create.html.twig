{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12 col-lg-11">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				<div class="card shadow mb-4">
					<!-- Card Header - Dropdown -->
					<div
						class="card-header py-3 flex-row align-items-center justify-content-between">
						<h4 class="m-0 font-weight-bold text-center tomato-color">New Synonym</h4>
					</div>
					<!-- Card Body -->
					<div class="card-body">
						{{ form_start(synonymForm) }}
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                {{ form_row
                                        (synonymForm.accession,
                                        { label: "Accession",
                                            'attr': {'placeholder': "Select an accession", 
                                                    'class': "custom-select d-block w-100"}
                                        })
                            }}
                            </div>
                            
                            <div class="col-md-4 mb-3">
                                {{ form_row
                                        (synonymForm.synonymSource,
                                        { label: "Synonym Source",
                                            'attr': {'placeholder': "Enter the source name"}
                                        })
                            }}
                            </div>

                            <div class="col-md-4 mb-3">
                                {{ form_row
                                    (synonymForm.synonymId,
                                        { label: "Synonym ID",
                                            'attr': {'placeholder': "Enter the synonym ID in the source"}
                                        })
                            }}
                            </div>
                        </div>

                        <div class="row">
                            {% include 'resource/btn_create.html.twig' %}
                        </div>
                    {{ form_end(synonymForm) }}
					</div>
				</div>
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}
