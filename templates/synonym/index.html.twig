{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container-fluid">
		<div class="row">
        {% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
            {% for message in messages %}
                <div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}
			<div class="col-md-12 order-md-1">
				{% if synonyms | length > 0 %}
                    <h2 class="mb-3 text-center tomato-color font-weight-bold">Synonym List</h2>
                    <div class="table-responsive"> 
                        <table id="datatable" class="table table-hover text-nowrap" width="100%">
                            <thead class="table-dark">
                                <tr>
                                <th scope="col">Accession</th>
                                <th scope="col">Synonym Source</th>
                                <th scope="col">Synonym ID</th>
                                <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for synonym in synonyms %}
                                    <tr>
                                        <td><a href="{{ path('accession_details', {id: synonym.accession.id}) }}">{{ synonym.accession }}<a></td>
                                        <td>{{ synonym.synonymSource }}</td>
                                        <td>{{ synonym.SynonymId }}</td>
                                        <td>
                                            <a href="{{ path('synonym_details', {id: synonym.id}) }}"><button class="btn btn-outline-primary">Details</button></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %} 
                    <h5 class="mb-3 text-center tomato-color font-weight-bold">No synonym has been provided in our system</h5>
                {% endif %}     
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
    {% include 'resource/list_js.html.twig' %}

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function() {
            $('#datatable').DataTable();
        } );
    </script>
{% endblock %}
