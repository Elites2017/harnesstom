{% extends 'base.html.twig' %}

{# Create a form them #}
{% form_theme qtlVariantForm _self %}

{% block datalist_widget %}
    <input {{ block('widget_attributes') }} list="qtl_variant_qtlStudy_list" value="{{ form.vars.value }}" />
    <datalist id="qtl_variant_qtlStudy_list">
        {% for choice in choices %}
            <option data-value="{{ choice.value }}">
                {{ choice.label }}
            </option>
        {% endfor %}
    <input type="hidden" name="qtl_variant[qtlStudy]" id="qtl_variant_qtlStudy_hidden">
    </datalist>
{% endblock %}

