{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12 col-lg-11">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				<div class="card shadow mb-4">
					<!-- Card Header - Dropdown -->
					<div
						class="card-header py-3 flex-row align-items-center justify-content-between">
						<h4 class="m-0 font-weight-bold text-center tomato-color">QTL Variant Edition</h4>
					</div>
					<!-- Card Body -->
					<div class="card-body">
						<span class="badge badge-info d-flex mb-3">
							<h5 class="mx-auto">
								Please select below the type of phenotyping data associated to this QTL Variant. Note: you can select only one
							</h5>
						</span>
						{{ form_start(qtlVariantForm) }}
						<div class="row">
								{# <div class="col-md-3">
									<input type="checkbox" id="obsVarData" name="obsVarData" value="true" >
									<label>Observation Variable Data<label/>
								</div>
								<div class="col-md-3">
									<input type="checkbox" id="metaboliteData" name="metaboliteData" value="true" >
									<label>Metabolite Data<label/>
								</div> #}
								<div class="col-md-4 mb-3">
									{{ form_row(qtlVariantForm.typeOfData, {label: "Type of phenotypic data"}) }}
								</div>
							</div>
						<div class="row">
							<div class="col-md-4 mb-3">
								{{ form_row(qtlVariantForm.name, {label: "Name", 'attr': {'placeholder' : 'Enter the name'}}) }}
							</div>

							<div class="col-md-4 mb-3">
								{{ form_row(qtlVariantForm.qtlStudy, {label: "QTL Study", 'attr': {'placeholder' : 'Select the qtl study',
								'class': "custom-select d-block w-100"}}) }}
							</div>

							<div class="col-md-4 mb-3">
								{{ form_row(qtlVariantForm.observationVariable, {label: "Observation Variable", 'attr': {'placeholder' : 'Enter the observation variable',
								'class': "custom-select d-block w-100"}}) }}
							</div>
						</div>

						<div class="row">
							<div class="col-md-4 mb-3">
								{{ form_row(qtlVariantForm.closestMarker, {label: "Closest Marker", 'attr': {'placeholder' : 'Select the closest marker',
								'class': "custom-select d-block w-100"}}) }}
							</div>

							<div class="col-md-4 mb-3">
								{{ form_row(qtlVariantForm.flankingMarkerStart, {label: "Flanking Marker Start", 'attr': {'placeholder' : 'Select the flanking marker start',
								'class': "custom-select d-block w-100"}}) }}
							</div>

							<div class="col-md-4 mb-3">
								{{ form_row(qtlVariantForm.flankingMarkerEnd, {label: "Flanking Marker End", 'attr': {'placeholder' : 'Select the flanking marker end',
								'class': "custom-select d-block w-100"}}) }}
							</div>
						</div>

						<div class="row">
							<div class="col-md-4 mb-3">
								{{ form_row(qtlVariantForm.metabolite, {label: "Metabolite", 'attr': {'placeholder' : 'Select the metabolite',
								'class': "custom-select d-block w-100"}}) }}
							</div>

							<div class="col-md-4 mb-3">
								{{ form_row(qtlVariantForm.positiveAlleleParent, {label: "Positive Allele Parent", 'attr': {'placeholder' : 'Select the positive allele parent',
								'class': "custom-select d-block w-100"}}) }}
							</div>

							<div class="col-md-4 mb-3">
								{{ form_row(qtlVariantForm.positiveAllele, {label: "Positive Allele", 'attr': {'placeholder' : 'Enter the positive allele'}}) }}
							</div>
						</div>

						<div class="row">
							<div class="col-md-3 mb-3">
								{{ form_row(qtlVariantForm.locusName, {label: "Locus Name", 'attr': {'placeholder' : 'Enter the locus name'}}) }}
							</div>

							<div class="col-md-3 mb-3">
								{{ form_row(qtlVariantForm.locus, {label: "Locus", 'attr': {'placeholder' : 'Enter the locus'}}) }}
							</div>

							<div class="col-md-3 mb-3">
								{{ form_row(qtlVariantForm.r2QTLxE, {label: "R2QtlxE", 'attr': {'placeholder' : 'Enter the R2QtlxE'}}) }}
							</div>

							<div class="col-md-3 mb-3">
								{{ form_row(qtlVariantForm.r2Global, {label: "R2Global", 'attr': {'placeholder' : 'Select the beta StdE'}}) }}
							</div>
						</div>

						<div class="row">
							<div class="col-md-3 mb-3">
								{{ form_row(qtlVariantForm.statisticQTLxEValue, {label: "Statistic qTL X Evalue", 'attr': {'placeholder' : 'Enter the statistic Qtl x evalue'}}) }}
							</div>

							<div class="col-md-3 mb-3">
								{{ form_row(qtlVariantForm.r2, {label: "R2", 'attr': {'placeholder' : 'Enter the R2'}}) }}
							</div>

							<div class="col-md-3 mb-3">
								{{ form_row(qtlVariantForm.dA, {label: "dA", 'attr': {'placeholder' : 'Enter the dA'}}) }}
							</div>

							<div class="col-md-3 mb-3">
								{{ form_row(qtlVariantForm.dominance, {label: "Dominance", 'attr': {'placeholder' : 'Enter the dominance'}}) }}
							</div>
						</div>

						<div class="row">
							<div class="col-md-3 mb-3">
								{{ form_row(qtlVariantForm.additive, {label: "Additive", 'attr': {'placeholder' : 'Enter the additive'}}) }}
							</div>

							<div class="col-md-3 mb-3">
								{{ form_row(qtlVariantForm.qtlStatsValue, {label: "QTL Stats Value", 'attr': {'placeholder' : 'Enter the qtl stats'}}) }}
							</div>

							<div class="col-md-3 mb-3">
								{{ form_row(qtlVariantForm.ciStart, {label: "Ci Start", 'attr': {'placeholder' : 'Enter the ci start'}}) }}
							</div>

							<div class="col-md-3 mb-3">
								{{ form_row(qtlVariantForm.ciEnd, {label: "Ci End", 'attr': {'placeholder' : 'Enter the ci end'}}) }}
							</div>

						</div>

						<div class="row">
							<div class="col-md-3 mb-3">
								{{ form_row(qtlVariantForm.detectName, {label: "Detect Name", 'attr': {'placeholder' : 'Enter the detect name'}}) }}
							</div>

							<div class="col-md-3 mb-3">
								{{ form_row(qtlVariantForm.originalTraitName, {label: "Original Trait Name", 'attr': {'placeholder' : 'Enter the original trait name'}}) }}
							</div>

							<div class="col-md-3 mb-3">
								{{ form_row(qtlVariantForm.peakPosition, {label: "Peak Position", 'attr': {'placeholder' : 'Enter the peak position'}}) }}
							</div>

							<div class="col-md-3 mb-3">
								{{ form_row(qtlVariantForm.linkageGroupName, {label: "Linkage Group Name", 'attr': {'placeholder' : 'Enter the linkage group name'}}) }}
							</div>

						</div>

						<div>
							<div id="pubRef-fields-list" data-prototype="{{ form_widget(qtlVariantForm.publicationReference.vars.prototype)|e }}" data-widget-tags="{{ '<div class="row mx-auto mb-3">New</div>'|e }}" data-widget-counter="{{ qtlVariantForm.publicationReference|length }}">
								{% for pubRef in qtlVariantForm.publicationReference %}
									<li>
										{{ form_errors(pubRef) }}
										{{ form_widget(pubRef) }}
									</li>
								{% endfor %}
							</div>
							<button type="button" class="btn btn-outline-info mb-3 add-another-collection-widget" data-list-selector="#pubRef-fields-list">Add publication reference</button>
						</div>

						<div class="row">
							{% include 'resource/btn_update.html.twig' %}
						</div>
						{{ form_end(qtlVariantForm) }}
					</div>
				</div>
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

