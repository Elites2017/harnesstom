{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <main class="main-content">
        <div class="fullwidth-block">
		</div> <!-- .fullwidth-block -->

        <div class="fullwidth-block">
            <div class="container">
                <div class="row">
                        <div class="card-body">
                            <h1 class="tomato-color">Factor Type</h1>
                            {{ form_start(factor_typeForm) }}
                                <div class="form-group">
                                    {{ form_row(factor_typeForm.ontology_id, {'attr': {'placeholder' : 'Enter the the ontology id'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(factor_typeForm.parentTerm, {'attr': {'placeholder' : 'Enter the the parent term'}}) }} 
                                </div>
                                <div class="form-group">
                                    {{ form_row(factor_typeForm.name, {'attr': {'placeholder' : 'Enter the the factor type name'}}) }} 
                                </div>
                                <div class="form-group">
                                    {{ form_row(factor_typeForm.description, {'attr': {'placeholder' : 'Enter the the factor type description'}}) }} 
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-outline-primary">Create</button>
                                    <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                                </div>
                            {{ form_end(factor_typeForm) }}
                        </div>
                    </div>
                    </div>
                </div> <!-- .row -->
            </div> <!-- .container -->
        </div> <!-- .fullwidth-block -->
    </main> <!-- .main-content -->
{% endblock %}
