{% extends 'base.html.twig' %}

{% form_theme instituteForm _self %}

{% block datalist_widget %}
    <input {{ block('widget_attributes') }} list="{{ form.vars.id }}_list" value="{{ form.vars.value }}" />
    <datalist id="{{ form.vars.id }}_list">
        {% for choice in choices %}
            <option data-value="{{ choice.value }}">
                {{ choice.label }}
            </option>
        {% endfor %}
	<input type="hidden" name={{ form.vars.full_name }} id="{{ form.vars.id }}_hidden">
    </datalist>
{% endblock %}

{% block title %}
	{{ title }}
{% endblock %}


{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-12 order-md-1">
				<h2 class="mb-3 text-center tomato-color font-weight-bold">New Institute</h2>
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				{{ form_start(instituteForm) }}
				<div class="row">
					<div class="col-md-6 mb-3">
						{{ form_row
                                        (instituteForm.instcode,
                                            { label: "Institue code *",
                                            'attr': {'placeholder': "Enter the institute code (instcode)"}
                                            }
                                        )
                                    }}
					</div>

					<div class="col-md-6 mb-3">
						{{ form_row
                                        (instituteForm.acronym,
                                            { label: "Acronym *",
                                            'attr': {'placeholder': "Enter the institute acronym"}
                                            }
                                        )
                                    }}
					</div>
				</div>
				<div>
					{{ form_row
                                        (instituteForm.name,
                                            { label: "Name *",
                                            'attr': {'placeholder': "Enter the institute name"}
                                            }
                                        )
                                    }}
				</div>
				<div>
					{{ form_row
                                        (instituteForm.streetNumber,
                                            { label: "Street number & name",
                                            'attr': {'placeholder': "Enter the street number & name"}
                                            }
                                        )
                                    }}
				</div>

				<div class="row">
					<div class="col-md-4 mb-3">
						{{ form_row
                                        (instituteForm.city,
                                            { label: "City",
                                            'attr': {'placeholder': "Enter the institute city"}
                                            }
                                        )
                                    }}
					</div>

					<div class="col-md-4 mb-3">
						{{ form_row
                                        (instituteForm.postalCode,
                                            { label: "Postal code",
                                            'attr': {'placeholder': "Enter the institute postal code"}
                                            }
                                        )
                                    }}
					</div>

					<div class="col-md-4 mb-3">
						{{ form_row
                                        (instituteForm.country,
                                            { label: "Country",
                                            'attr': {'placeholder': "Enter the institute country",
                                            'class': "custom-select d-block w-100"}
                                            }
                                        )
                                    }}
					</div>
				</div>

				<div class="row">
					<div class="col-md-6 mb-3">
						<button class="btn btn-outline-primary btn-lg btn-block" type="submit">Create</button>
					</div>

					<div class="col-md-6 mb-3">
						<button class="btn btn-outline-secondary btn-lg btn-block" type="reset">Cancel</button>
					</div>
				</div>
				{{ form_end(instituteForm) }}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
<script src="https://code.jquery.com/jquery-3.1.1.min.js" ></script>
<script src="{{ asset('assets/js/bootstrap4-toggle.min.js') }}"></script>
<script src="{{ asset('assets/axios/axios.min.js') }}"></script>
<script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>

<script>
    $(document).ready(function(){
		document.querySelector('input[list]').addEventListener('input', function(e) {
			var input = e.target,
				list = input.getAttribute('list'),
				options = document.querySelectorAll('#' + list + ' option'),
				hiddenInput = document.getElementById(input.getAttribute('id') + '_hidden'),
				inputValue = input.value;

			hiddenInput.value = inputValue;

			for(var i = 0; i < options.length; i++) {
				var option = options[i];
				// do not use innerText as it returns other caracter thans the text value itself
				if(option.text === inputValue) {
					hiddenInput.value = option.getAttribute('data-value');
					break;
				}
			}
		});
    });
</script>
{% endblock %}
