{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
		{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
			{% for message in messages %}
				<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
			{% endfor %}
		{% endfor %}
			<div class="col-md-12 order-md-1">
				{% if genotypingPlatforms | length > 0 %}
					<h2 class="mb-3 text-center tomato-color font-weight-bold">Genotyping Platform List</h2>
					<div class="table-responsive">
						<table id="datatable" class="table table-hover text-nowrap" width="100%">
							<thead class="table-dark">
								<tr>
									<th scope="col">Sequencing Type</th>
									<th scope="col">Name</th>
									<th scope="col">Ref Set Name</th>
									<th scope="col">Marker Count</th>
									<th scope="col">Sequencing Instrument</th>
									<th scope="col">Action</th>
								</tr>
							</thead>
							<tbody>
								{% for genotypingPlatform in genotypingPlatforms %}
									<tr>
										<td>
											{% if genotypingPlatform.sequencingType %}
												<a href="{{ path('sequencing_type_details', {id: genotypingPlatform.sequencingType.id}) }}">{{ genotypingPlatform.sequencingType }}</a>
											{% endif %}
										</td>
										<td>{{ genotypingPlatform.name }}</td>
										<td>{{ genotypingPlatform.refSetName }}</td>
										<td>{{ genotypingPlatform.markerCount }}</td>
										<td>
											{% if genotypingPlatform.sequencingInstrument %}
												<a href="{{ path('sequencing_instrument_details', {id: genotypingPlatform.sequencingInstrument.id}) }}">{{ genotypingPlatform.sequencingInstrument }}</a>
											{% endif %}
										</td>
										<td>
                                            <a href="{{ path('genotyping_platform_details', {id: genotypingPlatform.id}) }}"><button class="btn btn-outline-primary">Details</button></a>
                                        </td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				{% else %}
					<h5 class="mb-3 text-center tomato-color font-weight-bold">No genotyping plaform has been provided in our system</h5>
				{% endif %}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
	{% include 'resource/list_js.html.twig' %}
<script>
		$(document).ready(function () {
$('#datatable').DataTable();
});
	</script>
{% endblock %}
