{% extends 'base.html.twig' %}

{% form_theme germplasmStudyImageForm _self %}

{% block datalist_widget %}
    <input {{ block('widget_attributes') }} list="germplasm_study_image_factor_list" value="{{ form.vars.value }}" />
    <datalist id="germplasm_study_image_factor_list">
        {% for choice in choices %}
            <option data-value="{{ choice.value }}">
                {{ choice.label }}
            </option>
        {% endfor %}
    <input type="hidden" name="germplasm_study_image[factor]" id="germplasm_study_image_factor_hidden">
    </datalist>
{% endblock %}

