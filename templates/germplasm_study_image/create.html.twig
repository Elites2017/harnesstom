{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12 col-lg-11">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				<div class="card shadow mb-4">
					<!-- Card Header - Dropdown -->
					<div
						class="card-header py-3 flex-row align-items-center justify-content-between">
						<h4 class="m-0 font-weight-bold text-center tomato-color">New Germplasm Study Image</h4>
					</div>
					<!-- Card Body -->
					<div class="card-body">
						{{ form_start(germplasmStudyImageForm) }}
						<div class="row">
							<div class="col-md-4 mb-3">
								{{ form_row(germplasmStudyImageForm.factor, {label: "Factor Type", 'attr': {'placeholder' : 'Select the factor type',
												'class': "custom-select d-block w-100"}}) }}
							</div>

							<div class="col-md-4 mb-3">
								{{ form_row(germplasmStudyImageForm.developmentStage, {label: "Development Stage", 'attr': {'placeholder' : 'Select the  development stage',
												'class': "custom-select d-block w-100"}}) }}
							</div>

							<div class="col-md-4 mb-3">
								{{ form_row(germplasmStudyImageForm.plantAnatomicalEntity, {label: "Plant Anatomical Entity", 'attr': {'placeholder' : 'Select the  plant anatomical entity',
												'class': "custom-select d-block w-100"}}) }}
							</div>
						</div>
						
						<div>
							{{ form_row(germplasmStudyImageForm.description, {label: "Description", 'attr': {'placeholder': "Enter the description"}} ) }}
						</div>

						<div class="row">
							<div class="col-md-4 mb-3">
								{{ form_row(germplasmStudyImageForm.filename, {label: "Filename", 'attr': {'placeholder' : 'Select the image(s)'}}) }}
							</div>

							<div class="col-md-4 mb-3">
								{{ form_row(germplasmStudyImageForm.GermplasmID, {label: "Germplasm", 'attr': {'placeholder' : 'Select the germplasm',
												'class': "custom-select d-block w-100"}}) }}
							</div>

							<div class="col-md-4 mb-3">
								{{ form_row(germplasmStudyImageForm.StudyID, {label: "Study", 'attr': {'placeholder' : 'Select the study',
												'class': "custom-select d-block w-100"}}) }}
							</div>
						</div>

						<div class="row">
							{% include 'resource/btn_create.html.twig' %}
						</div>
						{{ form_end(germplasmStudyImageForm) }}
					</div>
				</div>
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
	<script src="https://code.jquery.com/jquery-3.1.1.min.js" ></script>
	<script src="{{ asset('assets/nl/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
	<script src="{{ asset('assets/nl/vendor/jquery/jquery.min.js') }}"></script>

	<!-- Core plugin JavaScript-->
	<script src="{{ asset('assets/nl/vendor/jquery-easing/jquery.easing.min.js') }}"></script>

	<!-- Custom scripts for all pages-->
	<script src="{{ asset('assets/nl/js/sb-admin-2.min.js') }}"></script>

	<script src="{{ asset('assets/js/data_upload_message.js') }}"></script>

	<script src="{{ asset('assets/nl/js/jquery-match-height-0.7.2.min.js') }}"></script>
	<script src="{{ asset('assets/nl/js/main.js') }}"></script>
	<script>
		$('.custom-file-input').on('change', function(event) {
		let inputFile = event.currentTarget;
		$(inputFile).parent().find('.custom-file-label').html(inputFile.files[0].name);
		});
	</script>

{% endblock %}