{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-12 order-md-1">
				<h2 class="mb-3 text-center tomato-color font-weight-bold">New Germplasm Study Image</h2>
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				{{ form_start(germplasmStudyImageForm) }}
				<div class="row">
					<div class="col-md-4 mb-3">
						{{ form_row(germplasmStudyImageForm.factor, {label: "Factor Type", 'attr': {'placeholder' : 'Select the factor type',
                                        'class': "custom-select d-block w-100"}}) }}
					</div>

					<div class="col-md-4 mb-3">
						{{ form_row(germplasmStudyImageForm.developmentStage, {label: "Development Stage", 'attr': {'placeholder' : 'Select the  development stage',
                                        'class': "custom-select d-block w-100"}}) }}
					</div>

					<div class="col-md-4 mb-3">
						{{ form_row(germplasmStudyImageForm.plantAnatomicalEntity, {label: "Plant Anatomical Entity", 'attr': {'placeholder' : 'Select the  plant anatomical entity',
                                        'class': "custom-select d-block w-100"}}) }}
					</div>
				</div>
				
				<div>
					{{ form_row(germplasmStudyImageForm.description, {label: "Description", 'attr': {'placeholder': "Enter the description"}} ) }}
				</div>

				<div class="row">
					<div class="col-md-4 mb-3">
						{{ form_row(germplasmStudyImageForm.filename, {label: "Filename", 'attr': {'placeholder' : 'Select the image(s)'}}) }}
					</div>

					<div class="col-md-4 mb-3">
						{{ form_row(germplasmStudyImageForm.GermplasmID, {label: "Germplasm", 'attr': {'placeholder' : 'Select the germplasm',
                                        'class': "custom-select d-block w-100"}}) }}
					</div>

					<div class="col-md-4 mb-3">
						{{ form_row(germplasmStudyImageForm.StudyID, {label: "Study", 'attr': {'placeholder' : 'Select the study',
                                        'class': "custom-select d-block w-100"}}) }}
					</div>
				</div>

				<div class="row">
					<div class="col-md-6 mb-3">
						<button class="btn btn-outline-primary btn-lg btn-block" type="submit">Create</button>
					</div>

					<div class="col-md-6 mb-3">
						<button class="btn btn-outline-secondary btn-lg btn-block" type="reset">Cancel</button>
					</div>
				</div>
				{{ form_end(germplasmStudyImageForm) }}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
	<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
	<script>
		window.jQuery || document.write('<script src="  {{ asset('../assets/js/vendor/jquery.slim.min.js') }}"><\/script>')
	</script>
	<script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>
	<!-- <script src="assets/js1/bootstrap.bundle.min.js"></script> -->
	
	<!-- Guided Tour LH  -->
	<script src="{{ asset('guidedtour/js/jquery-1.10.2.js') }}"></script>
	<script src="{{ asset('guidedtour/dist/js/hopscotch.js') }}"></script>
	<script src="{{ asset('guidedtour/js/demo.js') }}"></script>
	<script>
		$('.custom-file-input').on('change', function(event) {
		let inputFile = event.currentTarget;
		$(inputFile).parent().find('.custom-file-label').html(inputFile.files[0].name);
		});
	</script>
{% endblock %}