{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container-fluid">
		<div class="row">
			<div class="col-md-12 order-md-1">
                {% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				{% if germplasmStudyImages | length > 0 %}
                    <h2 class="mb-3 text-center tomato-color font-weight-bold">Germplasm Study Image List</h2>
                    <div class="table-responsive"> 
                        <table id="datatable" class="table table-hover text-nowrap" width="100%">
                            <thead class="table-dark">
                                <tr>
                                <th scope="col" data-orderable="false"></th>
                                <th scope="col">Germplasm ID</th>
                                <th scope="col" data-orderable="false"></th>
                                <th scope="col">Study ID</th>
                                <th scope="col" data-orderable="false">Description</th>
                                {# <th scope="col" data-orderable="false"></th>
                                <th scope="col">Factor Type</th>
                                <th scope="col" data-orderable="false"></th>
                                <th scope="col">Development Stage</th> #}
                                <th scope="col" data-orderable="false"></th>
                                <th scope="col">Plant Anatomical Entity</th>
                                <th scope="col" data-orderable="false">Image(s)</th>
                                <th scope="col" data-orderable="false">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                {% else %} 
                    <h5 class="mb-3 text-center tomato-color font-weight-bold">No germplasm study image has been provided in our system</h5>
                {% endif %}     
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
    {% include 'resource/list_js.html.twig' %}
               
	<script>
		let dataTableId = "#datatable";
		let linkId = "";
        let linkGermId = "";
        let linkStId = "";
        let linkFtId = "";
        let linkDvId = "";
        let linkPaeId = "";
		let colsDef = [
				// These are the column name variables that will be sent to the server
				{
				"data": "germ_id", "targets": 0,
					"render": function(data, type, row, meta) {
						linkGermId = data;
						return null;
					}
				},
                {
				"data": "germplasmID", "targets": 1,
					"render": function(data, type, row, meta) {
						if (data) {
							let url = '{{ path("germplasm_details", {'id': 'dataId'}) }}'; 
							url = url.replace("dataId", linkGermId);
							let actionlink = "<a href="+ url +">"+data+"</a>";
							return actionlink;
						} else {
							return null;
						}
					}
				},
                {
				"data": "study_id", "targets": 2,
					"render": function(data, type, row, meta) {
						linkStId = data;
						return null;
					}
				},
                {
				"data": "study_abbreviation", "targets": 3,
					"render": function(data, type, row, meta) {
						if (data) {
							let url = '{{ path("study_details", {'id': 'dataId'}) }}'; 
							url = url.replace("dataId", linkStId);
							let actionlink = "<a href="+ url +">"+data+"</a>";
							return actionlink;
						} else {
							return null;
						}
					}
				},
				{ "data": "description", "targets": 4 },
                {# {
				"data": "factor_id", "targets": 5,
					"render": function(data, type, row, meta) {
						linkFtId = data;
						return null;
					}
				},
                {
				"data": "factor_name", "targets": 6,
					"render": function(data, type, row, meta) {
						if (data) {
							let url = '{{ path("factor_type_details", {'id': 'dataId'}) }}'; 
							url = url.replace("dataId", linkFtId);
							let actionlink = "<a href="+ url +">"+data+"</a>";
							return actionlink;
						} else {
							return null;
						}
					}
				},
                {
				"data": "dev_stage_id", "targets": 7,
					"render": function(data, type, row, meta) {
						linkDvId = data;
						return null;
					}
				},
                {
				"data": "dev_stage_name", "targets": 8,
					"render": function(data, type, row, meta) {
						if (data) {
							let url = '{{ path("developmental_stage_details", {'id': 'dataId'}) }}'; 
							url = url.replace("dataId", linkDvId);
							let actionlink = "<a href="+ url +">"+data+"</a>";
							return actionlink;
						} else {
							return null;
						}
					}
				}, #}
                {
				"data": "ae_id", "targets": 9,
					"render": function(data, type, row, meta) {
						linkPaeId = data;
						return null;
					}
				},
                {
				"data": "ae_name", "targets": 10,
					"render": function(data, type, row, meta) {
						if (data) {
							let url = '{{ path("anatomical_entity_details", {'id': 'dataId'}) }}'; 
							url = url.replace("dataId", linkPaeId);
							let actionlink = "<a href="+ url +">"+data+"</a>";
							return actionlink;
						} else {
							return null;
						}
					}
				},
                { "data": "filename", "targets": 11 },
				{
				"data": "id", "targets": 12,
					"render": function(data, type, row, meta) {
						let url = '{{ path("germplasm_study_image_details", {'id': 'dataId'}) }}'; 
						url = url.replace("dataId", data);
						let actionlink = "<a href="+ url +"><button class='btn btn-outline-primary'>Details</button></a>";
						return actionlink;
					}
				}
			];
		let url = "{{ path('germplasm_study_image_datatable') }}";
		// call the function with data table id, columns & ajax url args
		dataTable(dataTableId, colsDef, url);
    </script>
{% endblock %}

