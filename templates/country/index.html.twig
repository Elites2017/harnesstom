{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12 order-md-1">
				{% if countries | length > 0 %}
					{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
						{% for message in messages %}
							<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
								<button type="button" class="close" data-dismiss="alert" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
						{% endfor %}
					{% endfor %}
					<div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h3 class="m-0 font-weight-bold text-center tomato-color">Country List</h3>
                        </div>
						<div class="card-body">
							<div class="table-responsive">
								<table id="datatable" class="table table-hover text-nowrap" width="100%">
									<thead class="table-dark">
										<tr>
											<th scope="col">Name</th>
											<th scope="col">ISO3</th>
											<th scope="col">Action</th>
										</tr>
									</thead>
									<tbody>
										{% for country in countries %}
											<tr>
												<td>
													{{ country.name }}
												</td>
												<td>
													{{ country.iso3 }}
												</td>
												<td>
													<a href="{{ path('country_details', {id: country.id}) }}">
														<button class="btn btn-outline-primary">Details</button>
													</a>
												</td>
											</tr>
										{% endfor %}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				{% else %}
					<h5 class="mb-3 text-center tomato-color font-weight-bold">No country has been provided in our system</h5>
				{% endif %}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
	{% include 'resource/list_js.html.twig' %}
	
	<script>
		$(document).ready(function () {
			$('#datatable').DataTable();
		});
	</script>
	
{% endblock %}
