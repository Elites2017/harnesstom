{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            {% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
                {% for message in messages %}
                    <div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
            {% endfor %}
            <div class="col-xl-12 col-lg-11">
                {% if species | length > 0 %}
                    <div class="card shadow mb-4">
						<div class="card-body">
                            <div class="table-responsive">
                                <table id="datatable" class="table table-hover text-nowrap" width="100%">
                                    <thead class="table-dark">
                                        <tr>
                                        <th scope="col">Taxon</th>
                                        <th scope="col">Species</th>
                                        <th scope="col">Genus</th>
                                        <th scope="col">Subtaxa</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for one in species %}
                                        <tr>
                                            <td>{{ one.taxonid }}</td>
                                            <td>{{ one.species }}</td>
                                            <td>{{ one.genus }}</td>
                                            <td>{{ one.subtaxa }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                {% else %} 
                    <h5 class="mb-3 text-center tomato-color font-weight-bold">No species have been found in our system</h5>
                {% endif %}  
		    </div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
	{% include 'resource/list_js.html.twig' %}
    <script>
		$(document).ready(function () {
            $('#datatable').DataTable();
        });
	</script>
{% endblock %}

