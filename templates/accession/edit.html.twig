<script>
    $(document).ready(function(){
        var $institute = $('#accession_instcode');
        // When institute gets selected ...
        $institute.change(function() {
            // ... retrieve the corresponding form.
            var $form = $(this).closest('form');
            // Simulate form data, but only include the selected institute value.
            var data = {};
            data[$institute.attr('name')] = $institute.val();
            // Submit data via AJAX to the form's action path.
            $.ajax({
                url : $form.attr('action'),
                type: $form.attr('method'),
                data : data,
                complete: function(html) {
                // Replace current position field ...
                $('#accession_maintainernumb').replaceWith(
                    // ... with the returned one from the AJAX response.
                    $(html.responseText).find('#accession_maintainernumb')
                );
                // Position field now displays the appropriate positions.
                }
            });
        });
    });
</script>


