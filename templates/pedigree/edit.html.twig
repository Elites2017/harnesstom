{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12 col-lg-11">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				<div class="card shadow mb-4">
					<!-- Card Header - Dropdown -->
					<div
						class="card-header py-3 flex-row align-items-center justify-content-between">
						<h4 class="m-0 font-weight-bold text-center tomato-color">Pedigree Edition</h4>
					</div>
					<!-- Card Body -->
					<div class="card-body">
						{{ form_start(pedigreeForm) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row
                                    (pedigreeForm.pedigreeEntryID,
                                        { label: "Pedigree Entry ID *",
                                            'attr': {'placeholder': "Enter the pedigree entry ID"}
                                        })
                            }}
                            </div>

                            <div class="col-md-6 mb-3">
                                {{ form_row
                                (pedigreeForm.generation,
                                    { label: "Generation",
                                    'attr': {'placeholder': "Enter the pedigree generation"}
                                    }
                                )
                            }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row
                                        (pedigreeForm.ancestorPedigreeEntryID,
                                        { label: "Ancestor Pedigree Entry ID",
                                            'attr': {'placeholder': "Enter the entry ID of the ancestor of the pedigree"}
                                        })
                            }}
                            </div>

                            <div class="col-md-6 mb-3">
                                {{ form_row
                                (pedigreeForm.pedigreeCross,
                                    { label: "Cross",
                                    'attr': {'placeholder': "Select the related cross",
                                            'class': "custom-select d-block w-100"}
                                    }
                                )
                            }}
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                {{ form_row
                                    (pedigreeForm.germplasm,
                                        { label: "Germplasm (You can select several germplasms)",
                                        'attr': {
                                            'placeholder': "Select the germplasm",
                                            'class': "custom-select d-block w-100"}
                                        }
                                    )
                                }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <button class="btn btn-outline-primary btn-lg btn-block" type="submit">Update</button>
                            </div>

                            <div class="col-md-6 mb-3">
                                <button class="btn btn-outline-secondary btn-lg btn-block" type="reset">Cancel</button>
                            </div>
                        </div>
                    {{ form_end(pedigreeForm) }}
					</div>
				</div>
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}
