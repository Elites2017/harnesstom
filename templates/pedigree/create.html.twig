{% extends 'base.html.twig' %}

{% form_theme pedigreeForm _self %}

{% block datalist_widget %}
    <input {{ block('widget_attributes') }} list="pedigree_generation_list" value="{{ form.vars.value }}" />
    <datalist id="pedigree_generation_list">
        {% for choice in choices %}
            <option data-value="{{ choice.value }}">
                {{ choice.label }}
            </option>
        {% endfor %}
    <input type="hidden" name="pedigree[generation]" id="pedigree_generation_hidden">
    </datalist>
{% endblock %}

{% block datalist1_widget %}
    <input {{ block('widget_attributes') }} list="pedigree_pedigreeAncestorEntryId_list" value="{{ form.vars.value }}" />
    <datalist id="pedigree_pedigreeAncestorEntryId_list">
        {% for choice in choices %}
            <option data-value="{{ choice.value }}">
                {{ choice.label }}
            </option>
        {% endfor %}
    <input type="hidden" name="pedigree[pedigreeAncestorEntryId]" id="pedigree_pedigreeAncestorEntryId_hidden">
    </datalist>
{% endblock %}

{% block datalist2_widget %}
    <input {{ block('widget_attributes') }} list="pedigree_pedigreeCross_list" value="{{ form.vars.value }}" />
    <datalist id="pedigree_pedigreeCross_list">
        {% for choice in choices %}
            <option data-value="{{ choice.value }}">
                {{ choice.label }}
            </option>
        {% endfor %}
    <input type="hidden" name="pedigree[pedigreeCross]" id="pedigree_pedigreeCross_hidden">
    </datalist>
{% endblock %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12 col-lg-11">
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				<div class="card shadow mb-4">
					<!-- Card Header - Dropdown -->
					<div
						class="card-header py-3 flex-row align-items-center justify-content-between">
						<h4 class="m-0 font-weight-bold text-center tomato-color">New Pedigree</h4>
					</div>
					<!-- Card Body -->
					<div class="card-body">
						{{ form_start(pedigreeForm) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row
                                    (pedigreeForm.pedigreeEntryID,
                                        { label: "Pedigree Entry ID *",
                                            'attr': {'placeholder': "Enter the pedigree entry ID"}
                                        })
                            }}
                            </div>

                            <div class="col-md-6 mb-3">
                                {{ form_row
                                (pedigreeForm.generation,
                                    { label: "Generation",
                                    'attr': {'placeholder': "Enter the pedigree generation",
                                            'class': "custom-select d-block w-100"}
                                    }
                                )
                            }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row
                                        (pedigreeForm.pedigreeAncestorEntryId,
                                        { label: "Ancestor Pedigree Entry ID",
                                            'attr': {'placeholder': "Select the entry ID of the ancestor of the pedigree",
                                            'class': "custom-select d-block w-100"}
                                        })
                            }}
                            </div>

                            <div class="col-md-6 mb-3">
                                {{ form_row
                                (pedigreeForm.pedigreeCross,
                                    { label: "Cross",
                                    'attr': {'placeholder': "Select the related cross",
                                            'class': "custom-select d-block w-100"}
                                    }
                                )
                            }}
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                {{ form_row
                                    (pedigreeForm.germplasm,
                                        { label: "Germplasm (You can select one germplasm)",
                                        'attr': {
                                            'placeholder': "Select the germplasm",
                                            'class': "custom-select d-block w-100"}
                                        }
                                    )
                                }}
                            </div>
                        </div>

                        <div class="row">
                            {% include 'resource/btn_create.html.twig' %}
                        </div>
                    {{ form_end(pedigreeForm) }}
					</div>
				</div>
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
    {% include 'resource/create_edit_js.html.twig' %}
{% endblock %}