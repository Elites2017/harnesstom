{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container-fluid">
		<div class="row">
			{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
                {% for message in messages %}
                    <div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
            {% endfor %}
            <div class="col-xl-12 col-lg-11">
                {% if studies | length > 0 %}
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h6 class="m-0 font-weight-bold tomato-color">Study List</br>
								<small>Private data are not shown unless they are shared with you.</small>
							</h6>
                            <div class="dropdown no-arrow">
                                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                                    aria-labelledby="dropdownMenuLink">
                                    <div class="dropdown-header">Graph View:</div>
                                    <a class="dropdown-item" href="#">Most Study By Country</a>
                                    <a class="dropdown-item" href="#">Most Study By Institute</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">Most Study By ...</a>
                                </div>
                            </div>
                        </div>
					    <div class="card-body">
                            <div class="table-responsive"> 
                                <table id="datatable" class="table table-hover text-nowrap" width="100%">
                                    <thead class="table-dark">
                                        <tr>
                                        <th scope="col">Abbreviation</th>
                                        <th scope="col">Name</th>
                                        <th scope="col" data-orderable="false"></th>
                                        <th scope="col">Trial</th>
                                        <th scope="col" data-orderable="false"></th>
                                        <th scope="col">GrowthFacility</th>
                                        <th scope="col" data-orderable="false">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                {% else %} 
                    <h5 class="mb-3 text-center tomato-color font-weight-bold">No study has been provided in our system</h5>
                {% endif %}
		    </div>
        </div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
    {% include 'resource/list_js.html.twig' %}

    <script>
		let dataTableId = "#datatable";
		let linkGfId = "";
		let linkTrId = "";
		let linkId = "";
        let colsDef = [
				// These are the column name variables that will be sent to the server
                { "data": "st_abbreviation", "targets": 0 },
                { "data": "st_name", "targets": 1 },
                {
				"data": "tr_id", "targets": 2,
					"render": function(data, type, row, meta) {
						linkTrId = data;
						return null;
					}
				},
				{
				"data": "tr_abbreviation", "targets": 3,
					"render": function(data, type, row, meta) {
						if  (data) {
							let url = '{{ path("trial_details", {'id': 'dataId'}) }}'; 
							url = url.replace("dataId", linkTrId);
							let actionlink = "<a href="+ url +">"+data+"</a>";
							return actionlink;
						}
						else {
							return null;
						}
					}
				},
				{
				"data": "gf_id", "targets": 4,
					"render": function(data, type, row, meta) {
						linkGfId = data;
						return null;
					}
				},
				{
				"data": "gf_name", "targets": 5,
					"render": function(data, type, row, meta) {
						if (data) {
							let url = '{{ path("growth_facility_type_details", {'id': 'dataId'}) }}'; 
							url = url.replace("dataId", linkGfId);
							let actionlink = "<a href="+ url +">"+data+"</a>";
							return actionlink;
						}
						else {
							return null;
						}
					}
				},
				{
				"data": "st_id", "targets": 6,
					"render": function(data, type, row, meta) {
						let url = '{{ path("study_details", {'id': 'dataId'}) }}'; 
						url = url.replace("dataId", data);
						let actionlink = "<a href="+ url +"><button class='btn btn-outline-primary'>Details</button></a>";
						return actionlink;
					}
				}
			];
		let url = "{{ path('study_datatable') }}";
		// call the function with data table id, columns & ajax url args
		dataTable(dataTableId, colsDef, url);
    </script>
{% endblock %}
