{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}


{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-12 order-md-1">
				<h2 class="mb-3 text-center tomato-color font-weight-bold">Location Edition</h2>
				{% for category, messages in app.flashes(['success', 'warning', 'danger']) %}
					{% for message in messages %}
						<div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">{{ message }}
							<button type="button" class="close" data-dismiss="alert" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
					{% endfor %}
				{% endfor %}
				{{ form_start(locationForm) }}
				<div class="row">
					<div class="col-md-4 mb-3">
						{{ form_row
                                        (locationForm.name,
                                            { label: "Name *",
                                            'attr': {'placeholder': "Enter the location name"}
                                            }
                                        )
                                    }}
					</div>

					<div class="col-md-4 mb-3">
						{{ form_row
                                        (locationForm.longitudeCo,
                                            { label: "Longitude *",
                                            'attr': {'placeholder': "Enter the location longitude"}
                                            }
                                        )
                                    }}
					</div>

					<div class="col-md-4 mb-3">
						{{ form_row
                                        (locationForm.latitudeCo,
                                            { label: "Latitude *",
                                            'attr': {'placeholder': "Enter the location latitude"}
                                            }
                                        )
                                    }}
					</div>
				</div>


				<div class="row">
					<div class="col-md-4 mb-3">
						{{ form_row
                                        (locationForm.altitudeCo,
                                            { label: "Altitude *",
                                            'attr': {'placeholder': "Enter the location altitude"}
                                            }
                                        )
                                    }}
					</div>

					<div class="col-md-4 mb-3">
						{{ form_row
                                        (locationForm.siteStatus,
                                            { label: "Site Status",
                                            'attr': {'placeholder': "Enter the location site status"}
                                            }
                                        )
                                    }}
					</div>

					<div class="col-md-4 mb-3">
						{{ form_row
                                        (locationForm.country,
                                            { label: "Country",
                                            'attr': {'placeholder': "Select the country",
                                            'class': "custom-select d-block w-100"}
                                            }
                                        )
                                    }}
					</div>
				</div>
				<div class="row">
					<div class="col-md-6 mb-3">
						<button class="btn btn-outline-primary btn-lg btn-block" type="submit">Update</button>
					</div>

					<div class="col-md-6 mb-3">
						<button class="btn btn-outline-secondary btn-lg btn-block" type="reset">Cancel</button>
					</div>
				</div>
				{{ form_end(locationForm) }}
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}
