{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block stylesheets %}
	{% include 'resource/list_style.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container-fluid">
		<div class="row">
			<div class="col-md-12 order-md-1">
				{% if sharedWiths | length > 0 %}
                    <h2 class="mb-3 text-center tomato-color font-weight-bold">Shared With List</h2>
                    <div class="table-responsive"> 
                        <table id="datatable" class="table table-hover text-nowrap" width="100%">
                            <thead class="table-dark">
                                <tr>
                                <th scope="col">Trial</th>
                                <th scope="col">User</th>
                                <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for sharedWith in sharedWiths %}
                                    <tr>
                                        <td><a href="{{ path('trial_details', {id: sharedWith.trial.id}) }}">{{ sharedWith.trial }}</a></td>
                                        <td><a href="{{ path('person_details', {id: sharedWith.user.person.id}) }}">{{ sharedWith.user }}</a></td>
                                        <td>
                                            <a href="{{ path('shared_with_details', {id: sharedWith.id}) }}"><button class="btn btn-outline-primary">Details</button></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %} 
                    <h5 class="mb-3 text-center tomato-color font-weight-bold">No shared trial has been provided in our system</h5>
                {% endif %}     
			</div>
		</div>
		<!-- .row -->
	</div>
	<!-- .container -->
{% endblock %}

{% block javascripts %}
    {% include 'resource/list_js.html.twig' %}

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function() {
            $('#datatable').DataTable();
        } );
    </script>
{% endblock %}
